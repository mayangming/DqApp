<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".login.activity.BindPhoneActivity">

    <com.da.library.widget.CommTitle
        android:id="@+id/bind_phone_comm_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/bind_phone_hint_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp50"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="@dimen/dd_dp30"
        app:layout_constraintTop_toBottomOf="@+id/bind_phone_comm_title_layout">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp50"
            android:layout_marginLeft="@dimen/dd_dp10"
            android:gravity="center_vertical"
            android:text="@string/china_mobile_phone"
            android:textColor="@color/text_title_black"
            android:textSize="@dimen/dd_dp16"
            tools:ignore="RtlHardcoded,SpUsage" />

        <View
            style="@style/item_line"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bind_phone_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp50"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/bind_phone_hint_rl">

        <ImageView
            android:id="@+id/icon_phone"
            style="@style/LoginRegisterEditTextIconStyle"
            android:contentDescription="@string/phone"
            android:src="@mipmap/phone" />

        <EditText
            android:id="@+id/bind_phone_number_et"
            style="@style/LoginRegisterEditTextStyle"
            android:layout_toRightOf="@+id/icon_phone"
            android:hint="@string/please_input_the_phone_number"
            tools:ignore="RtlHardcoded,SpUsage,TextFields" />

        <View
            style="@style/item_line"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bind_phone_code_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp50"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@+id/bind_phone_rl">

        <ImageView
            android:id="@+id/icon_password"
            style="@style/LoginRegisterEditTextIconStyle"
            android:contentDescription="@string/password"
            android:src="@mipmap/password" />

        <TextView
            android:id="@+id/bind_phone_get_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:gravity="center"
            android:padding="@dimen/dd_dp10"
            android:text="@string/getCode"
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/dd_dp14"
            tools:ignore="RtlHardcoded,SpUsage" />

        <EditText
            android:id="@+id/bind_phone_code_et"
            style="@style/LoginRegisterEditTextStyle"
            android:layout_toLeftOf="@+id/bind_phone_get_code_tv"
            android:layout_toRightOf="@+id/icon_password"
            android:hint="@string/inputCodes"
            android:maxLength="4"
            tools:ignore="RtlHardcoded,TextFields" />


        <View
            style="@style/item_line"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>


    <Button
        android:id="@+id/bind_phone_btn"
        style="@style/LoginRegisterButtonStyle"
        android:layout_marginTop="@dimen/dd_dp30"
        android:text="@string/bind"
        app:layout_constraintTop_toBottomOf="@+id/bind_phone_code_rl" />

</android.support.constraint.ConstraintLayout>
