<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <com.da.library.widget.CommTitle
        android:id="@+id/friend_area_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/area_refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/friend_area_title"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000"
        app:srlEnablePreviewInEditMode="true">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/area_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dd_dp250"
                    android:adjustViewBounds="true"
                    android:scaleType="matrix"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:src="@mipmap/area_head_bg"/>
                <LinearLayout
                    android:id="@+id/new_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_below="@+id/area_bg"
                    android:background="@drawable/gray_corner_5"
                    android:paddingVertical="@dimen/dd_dp6"
                    android:visibility="gone"
                    android:paddingHorizontal="@dimen/dp_16">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/new_msg_user_rv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginEnd="@dimen/dp_5"/>
                    <TextView
                        android:id="@+id/new_msg_content"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/white"
                        tools:text="1条新消息" />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/area_record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/new_msg"
                    android:layout_marginTop="-1dp" />
                <LinearLayout
                    android:id="@+id/area_bottom_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/area_record"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginHorizontal="@dimen/dp_20">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:layout_weight="1"
                        android:background="@color/color_E4E4E4"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:background="@color/color_E4E4E4"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:layout_weight="1"
                        android:background="@color/color_E4E4E4"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/area_person_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignBottom="@+id/area_bg"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginBottom="-10dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/area_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp16"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:text="我的圈子"/>
                    <ImageView
                        android:id="@+id/area_user_head"
                        android:layout_width="@dimen/dp_72"
                        android:layout_height="@dimen/dp_72"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <FrameLayout
        android:id="@+id/review_bottom_input_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>