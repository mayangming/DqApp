<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/dp_10"
    android:paddingHorizontal="@dimen/dp_16">

    <ImageView
        android:id="@+id/make_money_task_icon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@mipmap/make_money_task_screen_reset_icon"/>
    <TextView
        android:id="@+id/make_money_task_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_ff333333"
        android:textSize="@dimen/sp16"
        android:layout_marginStart="@dimen/dp_8"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/make_money_task_icon"
        tools:text="支付宝注册任务"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/make_money_task_label_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@+id/make_money_task_name_tv"
        app:layout_constraintStart_toEndOf="@+id/make_money_task_icon"/>
    <TextView
        android:id="@+id/make_money_task_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp16"
        android:textColor="@color/color_fff23939"
        android:layout_marginStart="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$1.2"/>
    <TextView
        android:id="@+id/make_money_task_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp10"
        android:textColor="@color/color_ff999999"
        android:layout_marginStart="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/make_money_task_icon"
        tools:text="共1000/余22"/>
</androidx.constraintlayout.widget.ConstraintLayout>