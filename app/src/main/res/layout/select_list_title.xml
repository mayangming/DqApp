<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dd_dp44"
    android:background="@color/white">

    <ImageView
        android:id="@+id/toolbar_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/toolbar_btn_pressed_20dp_selector"
        android:gravity="start"
        android:src="@drawable/back_vector_black"
        android:visibility="visible" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/toolbar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/dd_dp15"
        android:paddingRight="@dimen/dd_dp15"
        android:text="@string/title_select_friend_shield"
        android:textColor="@color/text_title_black"
        android:textSize="@dimen/title_text_size" />

    <LinearLayout
        android:id="@+id/toolbar_right_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:background="@drawable/toolbar_btn_pressed_20dp_selector"
        android:paddingLeft="@dimen/dd_dp10"
        android:paddingRight="@dimen/dd_dp10">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toolbar_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/title_text_size" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toolbar_right_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/title_text_size" />

    </LinearLayout>

</android.support.v7.widget.Toolbar>

