<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="213dp"
    android:layout_height="wrap_content"
    android:padding="@dimen/dd_dp10"
    android:background="@drawable/rect_bg_ffd500">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/guide_open_vip_close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dd_dp10"
        android:layout_marginRight="@dimen/dd_dp10"
        android:layout_marginEnd="@dimen/dd_dp10"
        android:src="@mipmap/icon_pay_close"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/guide_open_vip_close_iv"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dd_dp30"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/guide_open_vip_logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/guide_open_vip_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp18"
            android:textColor="@color/color_383838"
            android:layout_marginTop="@dimen/dd_dp30"
            android:layout_marginLeft="@dimen/dd_dp30"
            android:layout_marginRight="@dimen/dd_dp30"
            android:gravity="center"
            android:text="抱歉您还不是VIP会员，不能参加此活动"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_B49808"
            android:layout_marginTop="@dimen/dd_dp20"
            android:layout_marginBottom="@dimen/dd_dp20"
            android:gravity="center"
            android:text="开通会员获取更多6项权益"/>

        <LinearLayout
            android:id="@+id/guide_open_vip_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dd_dp20"
            android:paddingStart="@dimen/dd_dp20"
            android:paddingBottom="@dimen/dd_dp10"
            android:paddingTop="@dimen/dd_dp10"
            android:layout_marginBottom="@dimen/dd_dp20"
            android:gravity="center"
            android:background="@drawable/btn_white_corner_28">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp18"
                android:textColor="@color/color_B49808"
                android:text="立即开通"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dd_dp10"
                android:layout_marginLeft="@dimen/dd_dp10"
                android:src="@mipmap/arrow_dark"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>