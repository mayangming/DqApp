<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shareLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_bg_4dp">

    <TextView
        android:id="@+id/shareContentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dp8"
        android:layout_marginRight="@dimen/dd_dp8"
        android:layout_marginTop="@dimen/dd_dp8"
        android:textColor="@color/text_title_black"
        android:textSize="@dimen/dd_dp14"
        tools:ignore="SpUsage" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_margin="@dimen/dd_dp8"
        android:layout_below="@+id/shareContentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/shareContentLogo"
            android:layout_width="@dimen/dd_dp46"
            android:layout_height="@dimen/dd_dp46"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/shareContentTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/shareContentLogo"
            android:gravity="left"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/text_blue_pressed"
            android:textSize="@dimen/dd_dp13"
            tools:ignore="RtlHardcoded,SpUsage" />
    </RelativeLayout>


    <View
        android:id="@+id/line"
        style="@style/OnePxDivider"
        android:layout_below="@+id/rl_content"
        android:background="@color/color_a1a1a1" />

   <LinearLayout
       android:layout_below="@+id/line"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/dd_dp8"
       android:layout_marginTop="@dimen/dd_dp5"
       android:layout_marginBottom="@dimen/dd_dp15"
       android:gravity="center_vertical">

       <ImageView
           android:id="@+id/tv_appLogo"
           android:layout_width="@dimen/dd_dp15"
           android:layout_height="@dimen/dd_dp15"
           android:src="@mipmap/ic_launcher" />

       <TextView
           android:id="@+id/tv_appName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/dd_dp6"
           android:textColor="@color/text_blue_pressed"
           android:textSize="@dimen/dd_dp11"
           tools:ignore="RtlHardcoded,SpUsage" />

   </LinearLayout>
</RelativeLayout>
