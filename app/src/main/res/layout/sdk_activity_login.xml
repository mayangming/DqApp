<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginTop="@dimen/dd_dp30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dd_dp15"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dd_dp40"


            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/please_input_phone_number_or_dq_number"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />
        <RelativeLayout
            android:id="@+id/ll_validate_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp50"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/phone_dn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dp49"
                android:hint="@string/phoneJin"
                android:inputType="number"
                android:maxLines="1"
                android:textColorHint="@color/color_e1e1e1"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:background="@null"
                android:maxLength="13"
                android:singleLine="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <View
                style="@style/OnePxDivider"
                android:layout_below="@id/phone_dn"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_validate_code2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp50"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dp49"
                android:hint="@string/password"
                android:maxLines="1"
                android:textColorHint="@color/color_e1e1e1"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:background="@null"
                android:maxLength="15"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <View
                android:layout_below="@id/et_password"
                style="@style/OnePxDivider"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>