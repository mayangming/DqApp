<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/make_money_drawable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F8F8F8">
    <LinearLayout
        android:id="@+id/make_money_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <com.da.library.widget.CommTitle
            android:id="@+id/make_money_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp44" />
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/make_money_content_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:tabIndicatorHeight="0dp"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/make_money_content_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_8"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/make_money_right"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/dp_25"
        android:orientation="vertical"
        android:layout_gravity="end">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:layout_marginEnd="@dimen/dp_4"
                android:textSize="@dimen/sp14"
                android:text="筛选"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/make_money_screen_icon"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/make_money_task_platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp14"
                android:textColor="@color/color_F50000"
                android:layout_marginVertical="@dimen/dp_16"
                android:text="任务平台"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/make_money_task_platform_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/make_money_task_platform"/>
            <TextView
                android:id="@+id/make_money_task_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp14"
                android:textColor="@color/color_F50000"
                android:layout_marginVertical="@dimen/dp_16"
                android:layout_below="@+id/make_money_task_platform_rv"
                android:text="任务类型"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/make_money_task_type_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/make_money_task_type"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dd_dp50"
                android:layout_alignParentEnd="true">
                <TextView
                    android:id="@+id/make_money_task_screen_reset"
                    android:layout_width="@dimen/dd_dp80"
                    android:layout_height="@dimen/dd_dp32"
                    android:background="@mipmap/make_money_task_screen_reset_icon"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16"
                    android:gravity="center"
                    android:text="重置"/>
                <TextView
                    android:id="@+id/make_money_task_screen_sure"
                    android:layout_width="@dimen/dd_dp80"
                    android:layout_height="@dimen/dd_dp32"
                    android:background="@mipmap/make_money_task_screen_sure_icon"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16"
                    android:gravity="center"
                    android:text="确定"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>