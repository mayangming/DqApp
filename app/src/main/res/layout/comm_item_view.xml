<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <LinearLayout
        android:id="@+id/comm_item_llyt"
        style="@style/comm_sub_item_layout">

        <ImageView
            android:id="@+id/comm_item_icon"
            style="@style/mine_item_icon"
            android:layout_marginRight="@dimen/dd_dp8"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/comm_item_name"
            style="@style/comm_sub_title"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/comm_item_text"
                style="@style/comm_sub_title"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/comm_item_text_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/comm_item_text"
                android:background="@drawable/comm_item_tips_bg"
                android:gravity="center"
                android:paddingLeft="@dimen/dd_dp7"
                android:paddingRight="@dimen/dd_dp7"
                android:paddingBottom="@dimen/dd_dp1"
                android:text="推荐"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/dd_dp10"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/comm_item_reddot"
            style="@style/mine_item_icon"
            android:layout_width="@dimen/dd_dp8"
            android:layout_height="@dimen/dd_dp8"
            android:layout_marginRight="@dimen/dd_dp8"
            android:src="@mipmap/conv_voice_rec"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/comm_item_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dd_dp8"
            android:ellipsize="end"
            android:maxLength="16"
            android:maxLines="1"
            android:textColor="@color/app_txt_999999"
            android:textSize="14dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/comm_item_allow"
            style="@style/comm_arrow_right"/>
    </LinearLayout>

    <View
        android:id="@+id/comm_item_line"
        style="@style/item_line_margin_left12"
        android:layout_below="@+id/comm_item_llyt"/>

</RelativeLayout>