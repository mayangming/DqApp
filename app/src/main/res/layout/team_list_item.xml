<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <!--item内容展示容器-->
    <RelativeLayout
        android:id="@+id/teamlist_item_container_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp50"
        android:background="@drawable/comm_item_selector">

        <!--头像-->
        <ImageView
            android:id="@+id/teamlist_item_portrait_iv"
            android:layout_width="@dimen/dd_dp34"
            android:layout_height="@dimen/dd_dp34"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dp9"
            android:layout_marginRight="@dimen/dd_dp9"
            android:scaleType="centerCrop"
            android:src="@drawable/user_avatar"
            tools:ignore="ContentDescription,RtlHardcoded"/>

        <TextView
            android:id="@+id/teamlist_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/teamlist_item_portrait_iv"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="16"
            android:maxLines="1"
            android:textColor="@color/text_title_black"
            android:textSize="@dimen/dd_dp16"
            android:visibility="visible"
            tools:ignore="SpUsage"/>

        <!--群组内组员数量-->
        <TextView
            android:id="@+id/teamlist_item_name_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/teamlist_item_name_tv"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="32"
            android:textColor="@color/text_blue_pressed"
            android:textSize="@dimen/dd_dp14"
            android:visibility="visible"
            tools:ignore="RtlHardcoded,SpUsage"/>
    </RelativeLayout>

    <!--底部分割线-->
    <View
        android:id="@+id/item_line"
        style="@style/OnePxDivider"
        android:layout_marginLeft="@dimen/dd_dp9"
        android:layout_marginRight="@dimen/dd_dp9"
        android:background="@color/app_line"
        tools:ignore="RtlHardcoded"/>

</LinearLayout>