<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_page_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.da.library.widget.CommTitle
        android:id="@+id/set_pay_pwd_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/set_pay_pwd"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dd_dp20"
        style="@style/comm_sub_item_layout">

        <TextView
            style="@style/comm_sub_item_left_tv"
            android:layout_width="@dimen/dd_dp120"
            android:text="@string/pay_pwd" />

        <EditText
            android:id="@+id/set_pay_pwd_et"
            style="@style/comm_sub_item_right_et"
            android:hint="@string/pwd_is_six_number"
            android:inputType="numberPassword"
            android:maxLength="6"/>
    </LinearLayout>

    <View style="@style/item_line"/>

    <LinearLayout
        style="@style/comm_sub_item_layout">

        <TextView
            style="@style/comm_sub_item_left_tv"
            android:layout_width="@dimen/dd_dp120"
            android:text="@string/confirm_pay_pwd" />

        <EditText
            android:id="@+id/set_pay_pwd_again_et"
            style="@style/comm_sub_item_right_et"
            android:inputType="numberPassword"
            android:hint="@string/please_input_pay_pwd_again"
            android:maxLength="6"/>
    </LinearLayout>

    <TextView
        android:id="@+id/set_pay_pwd_confirm_tv"
        style="@style/comm_corner_btn"
        android:layout_marginLeft="@dimen/dd_dp12"
        android:layout_marginRight="@dimen/dd_dp12"
        android:layout_marginTop="@dimen/dd_dp30"
        android:text="@string/confirm"/>

</LinearLayout>