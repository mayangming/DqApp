<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collectionItemVoiceLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/collection_item_selector">
    <LinearLayout
        android:id="@+id/collectionItemVoiceIconLayout"
        android:layout_width="@dimen/dd_dp50"
        android:layout_height="@dimen/dd_dp50"
        android:background="@color/color_eeeeee"
        android:layout_marginTop="@dimen/dd_dp15"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:gravity="center">

        <ImageView
            android:id="@+id/collectionItemVoiceIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/collectionItemVoiceVoiceTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/collectionItemVoiceIconLayout"
        android:layout_marginLeft="@dimen/dd_dp10"
        android:layout_marginTop="@dimen/dd_dp33"
        android:text="@string/app_name"
        android:textSize="@dimen/dd_dp15"
        android:textColor="@color/text_title_black"/>
    <TextView
        android:id="@+id/collectionItemVoiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/collectionItemVoiceIconLayout"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_marginTop="@dimen/dd_dp20"
        android:layout_marginBottom="@dimen/dd_dp20"
        android:text="@string/app_name"
        android:textSize="@dimen/dd_dp12"
        android:textColor="@color/text_blue_pressed"/>
    <TextView
        android:id="@+id/collectionItemVoiceTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dd_dp15"
        android:layout_marginTop="@dimen/dd_dp15"
        android:text="@string/app_name"
        android:textSize="@dimen/dd_dp13"
        android:textColor="@color/color_a9a9a9"/>

</RelativeLayout>
