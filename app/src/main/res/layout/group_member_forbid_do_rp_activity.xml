<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_page_bg"
    android:orientation="vertical">

    <com.da.library.widget.CommTitle
        android:id="@+id/forbidDoRPActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dispatcher_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dd_dp5"
        android:layout_marginLeft="@dimen/dd_dp10"
        android:layout_marginTop="@dimen/dd_dp5"
        android:text="@string/dispatcher_member"
        android:textColor="@color/app_txt_999999"
        android:textSize="@dimen/dd_dp12"
        android:visibility="gone"
        tools:ignore="RtlHardcoded" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/add_other_member"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp44"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_login_item_bg"
            android:gravity="center"
            android:text="@string/add_other_member"
            android:textColor="@color/white" />

        <ListView
            android:id="@+id/dispatcher_lv"
            android:layout_above="@+id/add_other_member"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null" />

        <TextView
            android:id="@+id/dispatcher_none_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/dispatcher_none"
            android:textColor="@color/app_txt_999999"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
