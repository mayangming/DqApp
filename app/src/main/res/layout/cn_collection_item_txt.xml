<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collectionItemTxtLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/collection_item_selector">

    <com.wd.daquan.mine.collection.ReadMoreTextView
        android:id="@+id/collectionItemTxtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dp15"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_marginRight="@dimen/dd_dp90"
        android:autoLink="all"
        android:textSize="@dimen/dd_dp14"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/collectionItemTxtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dd_dp15"
        android:layout_marginRight="@dimen/dd_dp15"
        android:text="@string/app_name"
        android:textSize="@dimen/dd_dp14"
        android:textColor="@color/color_a9a9a9"/>
    <RelativeLayout
        android:id="@+id/collectionItemTxtBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/collectionItemTxtContent"
        android:layout_marginTop="@dimen/dd_dp15"
        android:layout_marginBottom="@dimen/dd_dp20"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_marginRight="@dimen/dd_dp15">
        <TextView
            android:id="@+id/collectionItemTxtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/dd_dp12"
            android:textColor="@color/text_blue_pressed"/>

        <TextView
            android:id="@+id/collectionItemTxtUnfold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/collection_unfold"
            android:padding="10dp"
            android:visibility="gone"
            android:background="@drawable/comm_item_selector"
            android:textColor="@color/black"
            android:textSize="@dimen/dd_dp13" />
    </RelativeLayout>
</RelativeLayout>
