<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <com.da.library.widget.CommTitle
        android:id="@+id/base_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dp22"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/transfer_p2p_avater"
            android:layout_width="@dimen/dd_dp65"
            android:layout_height="@dimen/dd_dp65"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/headPic"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/transfer_p2p_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dd_dp10"
            android:gravity="center_vertical"
            android:textColor="@color/app_txt_666666"
            android:textSize="@dimen/dd_dp12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dd_dp14"
            android:layout_marginLeft="@dimen/dd_dp14"
            android:layout_marginTop="@dimen/dd_dp17"
            android:gravity="center_vertical"
            android:text="@string/transfer_transfer_amount"
            android:textColor="@color/color_21251d"
            android:textSize="@dimen/dd_dp14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dp14"
            android:layout_marginTop="@dimen/dd_dp14"
            android:layout_marginRight="@dimen/dd_dp14"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dd_dp9"
                android:layout_marginLeft="@dimen/dd_dp9"
                android:gravity="center_vertical"
                android:text="@string/redpacket_send_money"
                android:textColor="@color/app_txt_333333"
                android:textSize="@dimen/dd_dp29" />

            <EditText
                android:id="@+id/transfer_p2p_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dd_dp9"
                android:layout_marginLeft="@dimen/dd_dp9"
                android:layout_marginEnd="@dimen/dd_dp5"
                android:layout_marginRight="@dimen/dd_dp5"
                android:layout_weight="1"
                android:background="@null"
                android:digits="0123456789"
                android:gravity="center_vertical|left"
                android:inputType="numberDecimal"
                android:maxLength="16"
                android:textColor="@color/app_txt_333333"
                android:textColorHint="@color/app_txt_999999"
                android:textSize="@dimen/dd_dp35" />

        </LinearLayout>

        <View
            style="@style/OnePxDivider"
            android:layout_marginLeft="@dimen/dd_dp14"
            android:layout_marginRight="@dimen/dd_dp14" />

        <LinearLayout
            android:id="@+id/transfer_p2p_amount_insufficient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dp14"
            android:layout_marginTop="@dimen/dd_dp9"
            android:layout_marginRight="@dimen/dd_dp14"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dd_dp9"
                android:layout_marginLeft="@dimen/dd_dp9"
                android:gravity="center_vertical"
                android:text="@string/transfer_amount_insufficient"
                android:textColor="@color/color_8e8e8e"
                android:textSize="@dimen/dd_dp12" />

            <TextView
                android:id="@+id/transfer_p2p_recharge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dd_dp9"
                android:layout_marginRight="@dimen/dd_dp9"
                android:gravity="center_vertical"
                android:text="@string/transfer_amount_recharge"
                android:textColor="@color/color_ea463a"
                android:textSize="@dimen/dd_dp12" />
        </LinearLayout>

        <EditText
            android:id="@+id/transfer_p2p_desc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp56"
            android:layout_marginLeft="@dimen/dd_dp14"
            android:layout_marginTop="@dimen/dd_dp9"
            android:layout_marginRight="@dimen/dd_dp14"
            android:background="@drawable/shape_input_transfer"
            android:gravity="top"
            android:hint="@string/transfer_add_desc"
            android:inputType="textMultiLine"
            android:maxEms="20"
            android:maxLength="20"
            android:padding="@dimen/dd_dp5"
            android:textColor="@color/color_21251d"
            android:textColorHint="@color/app_txt_999999"
            android:textColorLink="@color/color_565656"
            android:textSize="@dimen/dd_dp14" />

        <TextView
            android:id="@+id/transfer_p2p_gransfer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp36"
            android:layout_marginLeft="@dimen/dd_dp14"
            android:layout_marginTop="@dimen/dd_dp27"
            android:layout_marginRight="@dimen/dd_dp14"
            android:layout_marginBottom="@dimen/dd_dp27"
            android:background="@drawable/btn_login_item_bg"
            android:gravity="center"
            android:text="@string/transfer_transfer"
            android:textColor="@color/white"
            android:textSize="@dimen/dd_dp16" />
    </LinearLayout>
</LinearLayout>
