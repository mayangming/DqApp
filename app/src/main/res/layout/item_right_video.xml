<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_right_video_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_right_video_bg"
            android:layout_width="@dimen/dd_dp100"
            android:layout_height="@dimen/dd_dp200"
            android:layout_centerInParent="true"
            android:gravity="end"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_right_video_iv"
            android:layout_width="@dimen/dd_dp50"
            android:layout_height="@dimen/dd_dp50"
            android:layout_centerInParent="true"
            android:gravity="end"
            android:src="@mipmap/im_video_play_icon"/>
        <ProgressBar
            android:id="@+id/video_loading"
            android:layout_width="@dimen/dd_dp50"
            android:layout_height="@dimen/dd_dp50"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:gravity="end"/>
    </RelativeLayout>
</LinearLayout>