<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

    <com.da.library.widget.CommSearchEditText
        android:id="@+id/search_conversation_commsearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44"
        app:stvSearchStyle="HasBackSearch"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/search_conversation_refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_conversation_commsearch"
        app:srlEnableAutoLoadMore="false"
        app:srlEnableLoadMore="true">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="Scale"
            app:srlDrawableProgress="@drawable/ic_progress_puzzle"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_conversation_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <TextView
        android:id="@+id/search_conversation_tips"
        android:text="请输入搜索内容"
        android:gravity="top|center_horizontal"
        android:layout_marginTop="115dp"
        style="@style/not_to_search_data_style"/>

    <TextView
        android:id="@+id/search_conversation_emptyview"
        android:visibility="gone"
        style="@style/not_to_search_data_style" />


</RelativeLayout>
