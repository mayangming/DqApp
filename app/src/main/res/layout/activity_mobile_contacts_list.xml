<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".contacts.activity.MobileContactsListActivity">

    <com.da.library.widget.CommTitle
        android:id="@+id/mobile_phone_list_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>


    <com.da.library.widget.CommSearchEditText
        android:id="@+id/mobile_phone_list_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mobile_phone_list_title_layout"
        app:stvSearchStyle="DefaultSearch"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mobile_phone_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mobile_phone_list_search_layout"/>

    <com.da.library.widget.SideBar
        android:id="@+id/mobile_phone_list_side_bar"
        android:layout_width="@dimen/dd_dp20"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/mobile_phone_list_search_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"/>



    <LinearLayout
        android:id="@+id/mobile_phone_list_no_data_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/mobile_phone_list_search_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/mobile_contact_not_register"
            style="@style/not_to_search_data_style"/>

        <TextView
            android:id="@+id/mobile_phone_list_invite_tv"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color_selector"
            android:text="@string/inviter_contact"
            style="@style/not_to_search_data_style"/>

    </LinearLayout>

    <TextView
        android:id="@+id/mobile_phone_list_letter_tv"
        android:layout_width="@dimen/dd_dp80"
        android:layout_height="@dimen/dd_dp80"
        android:background="@drawable/side_bar_text"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dd_dp30"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mobile_phone_list_search_layout"
        tools:ignore="SpUsage" />


</android.support.constraint.ConstraintLayout>
