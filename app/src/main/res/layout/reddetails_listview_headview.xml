<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_page_bg">

    <LinearLayout
        android:id="@+id/redDetdetailsTimeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dd_dp15"
        android:layout_marginTop="@dimen/dd_dp15"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="RelativeOverlap,RtlHardcoded,UseCompoundDrawables">

        <TextView
            android:id="@+id/redDetdetailsTimeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_919191" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/choice_time"
            android:src="@mipmap/icon_xl" />
    </LinearLayout>

    <ImageView
        android:id="@+id/redDetdetailsAvatarImg"
        android:layout_width="@dimen/dd_dp60"
        android:layout_height="@dimen/dd_dp60"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dd_dp25"
        android:src="@drawable/user_avatar"
        android:contentDescription="@string/headPic" />

    <TextView
        android:id="@+id/redDetdetailsNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/redDetdetailsAvatarImg"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dd_dp10"
        android:textColor="@color/color_818181"
        android:textSize="@dimen/dd_dp10" />


    <TextView
        android:id="@+id/redDetdetailsMoneyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/redDetdetailsNameTxt"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dd_dp15"
        android:text="￥0.00"
        android:textColor="@color/black"
        android:textSize="@dimen/dd_dp25" />

    <LinearLayout
        android:id="@+id/redDetdetailsBeloweLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/redDetdetailsMoneyTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dd_dp10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/redDetdetailsRedGetTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收到的红包"
            android:textColor="@color/color_818181"
            android:textSize="@dimen/dd_dp10" />

        <TextView
            android:id="@+id/redDetdetailsRedGetCountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dp5"
            android:textColor="@color/color_d84e43"
            android:textSize="@dimen/dd_dp10"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/dd_dp2"
        android:layout_height="@dimen/dd_dp10"
        android:layout_below="@id/redDetdetailsBeloweLayout" />
</RelativeLayout>