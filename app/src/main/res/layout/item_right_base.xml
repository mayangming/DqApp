<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/message_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dd_dp20"
        android:layout_toStartOf="@+id/base_right_container_ll"
        android:layout_centerVertical="true">
        <ProgressBar
            android:id="@+id/message_loading"
            android:layout_width="@dimen/dd_dp30"
            android:layout_height="@dimen/dd_dp30"/>
        <ImageView
            android:id="@+id/message_fail"
            android:layout_width="@dimen/dd_dp30"
            android:layout_height="@dimen/dd_dp30"
            android:src="@mipmap/message_send_fail"
            android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/base_right_container_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_right_head_contain"
        android:layout_toStartOf="@+id/item_right_head_contain"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_right_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="end"
            tools:text="用户昵称"/>
        <FrameLayout
            android:id="@+id/base_right_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </FrameLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/item_right_head_contain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/dp_5">
        <FrameLayout
            android:id="@+id/head_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">
            <ImageView
                android:id="@+id/item_right_head_icon"
                android:layout_width="@dimen/dd_dp48"
                android:layout_height="@dimen/dd_dp48"
                android:src="@drawable/user_avatar"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_2"
                android:scaleType="centerCrop"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/item_right_head_icon_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:visibility="visible"
            android:layout_alignBottom="@+id/head_container"
            android:layout_alignEnd="@+id/head_container"
            android:src="@mipmap/icon_vip"/>
    </RelativeLayout>
</RelativeLayout>