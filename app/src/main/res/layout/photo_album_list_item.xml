<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/photoAlbumListImg"
        android:layout_width="@dimen/dd_dp100"
        android:layout_height="@dimen/dd_dp100"
        android:layout_marginLeft="@dimen/dd_dp10"
        android:layout_marginTop="@dimen/dd_dp5"
        android:layout_marginBottom="@dimen/dd_dp5"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:src="@mipmap/qc_default_image_fail" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dp100"
        android:layout_marginLeft="@dimen/dd_dp10"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/photoAlbumListImg"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/photoAlbumListTxtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="16"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/photoAlbumListTxtNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_8B7D7B"
            android:textSize="@dimen/dd_dp16" />
    </LinearLayout>

    <View
        android:id="@+id/item_line"
        style="@style/item_line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dd_dp9"
        android:layout_marginRight="@dimen/dd_dp9"/>

</RelativeLayout>