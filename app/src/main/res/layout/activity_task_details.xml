<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F8F8F8">
    <com.da.library.widget.CommTitle
        android:id="@+id/make_money_task_details_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_F8F8F8"
        app:layout_constraintTop_toBottomOf="@+id/make_money_task_details_title"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/color_F8F8F8"
            android:paddingBottom="@dimen/dd_dp100"
            android:layout_marginTop="@dimen/dp_16">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/make_money_task_introduction"
                android:layout_width="0dp"
                android:layout_height="@dimen/dd_dp150"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dd_dp24"
                android:layout_marginBottom="@dimen/dd_dp8"
                android:background="@mipmap/task_details_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/task_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp10"
                    android:layout_marginStart="@dimen/dd_dp72"
                    android:layout_marginTop="@dimen/dd_dp9"
                    android:background="@drawable/label_gray"
                    android:paddingVertical="0.5dp"
                    android:paddingHorizontal="7dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="任务ID：468726"/>

                <TextView
                    android:id="@+id/task_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_EF5B40"
                    android:textSize="@dimen/sp14"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:paddingHorizontal="@dimen/dp_2"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="奖金：¥1.2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/color_E4E4E4"
                    android:layout_marginBottom="@dimen/dp_20"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <LinearLayout
                        android:id="@+id/task_total_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/task_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp16"
                            android:textColor="@color/color_333333"
                            android:text="100"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_22"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/color_666666"
                            android:text="总数"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_E4E4E4"/>
                    <LinearLayout
                        android:id="@+id/task_remainder_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/task_remainder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp16"
                            android:textColor="@color/color_333333"
                            android:text="3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_22"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/color_666666"
                            android:text="剩余"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_E4E4E4"/>
                    <LinearLayout
                        android:id="@+id/task_end_time_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/task_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/color_333333"
                            android:text="2020.07.09"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dd_dp24"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/color_666666"
                            android:text="截止日期"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_E4E4E4"/>
                    <LinearLayout
                        android:id="@+id/task_audit_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/task_audit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp16"
                            android:textColor="@color/color_333333"
                            android:text="48小时"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_22"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/color_666666"
                            android:text="审核时间"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/task_icon"
                android:layout_width="@dimen/dd_dp48"
                android:layout_height="@dimen/dd_dp48"
                android:layout_marginHorizontal="@dimen/dd_dp32"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@mipmap/explore_money"/>
            <LinearLayout
                android:id="@+id/task_description_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginVertical="@dimen/dp_8"
                android:background="@drawable/white_corner"
                app:layout_constraintTop_toBottomOf="@+id/make_money_task_introduction">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/tip_green_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp16"
                        android:layout_marginStart="@dimen/dp_4"
                        android:text="任务说明"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_E4E4E4"/>
                <TextView
                    android:id="@+id/task_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:textSize="@dimen/sp14"
                    tools:text="斗圈朋友圈集赞，48小时内点赞满10个，并提交"/>
            </LinearLayout>
            <TextView
                android:id="@+id/read_demo_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dd_dp32"
                android:layout_marginTop="@dimen/dp_12"
                android:textSize="@dimen/sp14"
                android:textColor="@color/color_666666"
                app:layout_constraintTop_toBottomOf="@+id/task_description_container"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="做任务教学视频:点击查看"/>
            <LinearLayout
                android:id="@+id/task_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_corner"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:padding="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@+id/read_demo_video"
                app:layout_constraintStart_toStartOf="parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/tip_list_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp16"
                        android:layout_marginStart="@dimen/dp_4"
                        android:text="任务步骤"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_E4E4E4"
                    android:layout_marginVertical="@dimen/dp_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/color_666666"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="1、保存图片并分享到斗圈圈子"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_15">
                    <ImageView
                        android:id="@+id/task_step1"
                        android:layout_width="104dp"
                        android:layout_height="184dp"
                        android:src="@mipmap/step1"/>
                    <ImageView
                        android:id="@+id/save_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/dp_16"
                        android:src="@mipmap/save_share_logo"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_E4E4E4"
                    android:layout_marginVertical="@dimen/dp_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/color_666666"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="2、在规定时间内，点赞数量达到任务要求"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_40">
                    <ImageView
                        android:id="@+id/task_step2"
                        android:layout_width="104dp"
                        android:layout_height="184dp"
                        android:src="@mipmap/step2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/description_logo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_E4E4E4"
                    android:layout_marginVertical="@dimen/dp_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/color_666666"
                    android:layout_marginStart="@dimen/dp_16"
                    android:text="3、截图上传"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_15">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_40">
                        <ImageView
                            android:id="@+id/task_step3"
                            android:layout_width="104dp"
                            android:layout_height="184dp"
                            android:src="@mipmap/step2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/reward_logo"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/screenshot_result_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible">
                        <ImageView
                            android:id="@+id/screenshot_result"
                            android:layout_width="104dp"
                            android:layout_height="184dp"
                            android:layout_marginStart="@dimen/dp_40"
                            android:src="@mipmap/step1"
                            android:layout_marginTop="@dimen/dp_5"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <ImageView
                            android:id="@+id/del_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/del_grey_icon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintCircle="@+id/screenshot_result"
                            app:layout_constraintCircleAngle="20"
                            app:layout_constraintCircleRadius="150dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <LinearLayout
                        android:id="@+id/screenshot_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dd_dp7"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/upload_photo"
                            android:layout_width="@dimen/dd_dp80"
                            android:layout_height="@dimen/dd_dp80"
                            android:src="@mipmap/add_picture_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_49649D"
                            android:textSize="@dimen/sp12"
                            android:layout_marginTop="@dimen/dp_22"
                            android:text="上传左侧示例"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp12"
                            android:textColor="@color/color_EF5B40"
                            android:layout_marginTop="@dimen/dp_22"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:text="请勿上传与任务无关的图片,发现将面临封号处理"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/task_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/task_details_refresh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/task_status_content_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <LinearLayout
            android:id="@+id/task_status_content_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color_E4E4E4"
            android:paddingVertical="@dimen/dp_16"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent=".8">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_18"
                android:src="@mipmap/edit_icon"/>
            <TextView
                android:id="@+id/task_status_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                android:text="不合格的任务已过期"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>