<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/withdraw_record_sub_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dp10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/withdraw_sub_record_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_333333"
            tools:text="提现-微信到账"/>
        <TextView
            android:id="@+id/withdraw_sub_record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_txt_999999"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dd_dp10"
            tools:text="12月29日 12:9:23"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:layout_marginTop="@dimen/dd_dp10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/withdraw_sub_record_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/color_333333"
            tools:text="-20.00"/>
        <TextView
            android:id="@+id/withdraw_sub_record_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_txt_999999"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dd_dp10"
            tools:text="处理中"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_e6e6e6"
        android:layout_below="@+id/withdraw_record_sub_content"
        android:layout_marginTop="@dimen/dd_dp10"/>
</RelativeLayout>