<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ebebeb">
    <com.da.library.widget.CommTitle
        android:id="@+id/base_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/groupName"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_marginTop="@dimen/dd_dp5"
        android:textSize="@dimen/dd_dp10"/>
    <EditText
        android:id="@+id/etGroupName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp50"
        android:hint="@string/groupName"
        android:singleLine="true"
        android:textColorHint="@color/color_e1e1e1"
        android:textSize="@dimen/dd_dp14"
        android:background="@color/white"
        android:maxEms="15"
        android:ellipsize="end"
        android:maxLength="16"
        android:paddingLeft="@dimen/dd_dp15"
        android:layout_marginTop="@dimen/dd_dp5"
        />
</LinearLayout>
