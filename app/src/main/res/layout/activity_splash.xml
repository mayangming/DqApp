<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.youth.banner.Banner
        android:id="@+id/splash_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:visibility="gone"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/splash_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:visibility="invisible"
        style="@style/LoginRegisterButtonStyle"
        android:id="@+id/splash_btn_skip"
        android:layout_width="@dimen/dd_dp100"
        android:layout_height="@dimen/dd_dp40"
        android:text="@string/experience_immediately"
        android:enabled="true"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dd_dp30"
        android:layout_marginTop="@dimen/dd_dp160"
        android:layout_marginLeft="@dimen/dd_dp30" />

    <RadioGroup
        android:id="@+id/splash_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">
        <RadioButton
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/indicator_selector"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"/>
        <RadioButton
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/indicator_selector"/>
    </RadioGroup>

</RelativeLayout>



