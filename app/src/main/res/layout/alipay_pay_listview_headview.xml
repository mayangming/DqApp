<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_d84e43">

    <TextView
        android:id="@+id/year_month_tv"
        android:layout_alignParentRight="true"
        android:drawableRight="@mipmap/arrow_down"
        android:background="@drawable/alipay_btn_selecter"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:drawablePadding="3dp"
        android:layout_marginRight="@dimen/dd_dp10"
        android:layout_marginTop="@dimen/dd_dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/user_head_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/user_avatar"
        android:src="@drawable/user_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dd_dp15"/>

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_head_iv"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:padding="16dp"
        android:textSize="15dp"
        tools:ignore="SpUsage" />

    <View
        android:background="@color/white"
        android:layout_below="@+id/user_name_tv"
        android:layout_centerHorizontal="true"
        android:layout_width="140dp"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/user_name_tv"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@mipmap/icon_alipay_circle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dd_dp5">

            <TextView
                android:id="@+id/ali_pay_account_tv"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ali_pay_hint"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alipay_pay_details_ins"
                android:textColor="@color/white"
                android:textSize="12dp"
                tools:ignore="SpUsage" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>