<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/comm_item_selector"
                android:gravity="center_vertical"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/comm_search_item_portrait"
        android:layout_width="@dimen/dd_dp34"
        android:layout_height="@dimen/dd_dp34"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dd_dp8"
        android:layout_marginLeft="@dimen/dd_dp9"
        android:layout_marginRight="@dimen/dd_dp9"
        android:layout_marginTop="@dimen/dd_dp8"
        android:scaleType="centerCrop"
        android:src="@drawable/user_avatar"/>

    <TextView
        android:id="@+id/comm_search_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/comm_search_item_portrait"
        android:ellipsize="end"
        android:lines="1"
        android:maxLength="32"
        android:textColor="@color/black"
        android:textSize="@dimen/dd_dp16"/>

    <TextView
        android:id="@+id/comm_search_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/comm_search_item_title"
        android:visibility="visible"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_below="@+id/comm_search_item_portrait"
        android:layout_marginLeft="@dimen/dd_dp9"
        android:layout_marginRight="@dimen/dd_dp9"
        android:background="#cccccc"/>

</RelativeLayout>