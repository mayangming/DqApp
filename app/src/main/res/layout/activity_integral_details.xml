<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.da.library.widget.CommTitle
        android:id="@+id/integral_details_title"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_16">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余"
            android:textSize="@dimen/sp12"
            android:textColor="@color/color_333333"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/dq_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_EF5B40"
            android:textStyle="bold"
            android:textSize="@dimen/sp18"
            android:layout_marginHorizontal="@dimen/dp_3"
            tools:text="1000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp12"
            android:text="斗币"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/integral_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_EF5B40"
                    android:textSize="@dimen/sp16"
                    android:text="收入"/>
                <View
                    android:id="@+id/label1_divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/color_EF5B40"
                    android:layout_marginTop="@dimen/dp_4"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/integral_expenditure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:gravity="center">
                <TextView
                    android:id="@+id/label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ff999999"
                    android:textSize="@dimen/sp16"
                    android:text="支出"/>
                <View
                    android:id="@+id/label2_divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/color_EF5B40"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_4"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/time_chose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center">
            <TextView
                android:id="@+id/time_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本月"
                android:textSize="@dimen/sp16"
                android:textColor="@color/color_ff999999"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_down_gray"
                android:layout_marginStart="@dimen/dp_4"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingVertical="@dimen/dp_18">
        <TextView
            android:id="@+id/current_day_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近一个月积分收入"
            android:textSize="@dimen/sp12"
            android:textColor="@color/color_ff999999"/>
        <TextView
            android:id="@+id/current_day_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp12"
            android:layout_marginHorizontal="@dimen/dp_4"
            tools:text="123"/>
    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/integral_detail_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="@dimen/dp_10"
        app:srlAccentColor="#00000000"
        app:srlEnablePreviewInEditMode="true"
        app:srlPrimaryColor="#00000000">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.wd.daquan.view.BaseRecycleView
                android:id="@+id/integral_detail_brl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>