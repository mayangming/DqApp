<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F8F8F8">
    <com.da.library.widget.CommTitle
        android:id="@+id/red_package_send_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <RelativeLayout
        android:id="@+id/red_package_money_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_corner"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/red_package_send_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/red_package_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_package_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                android:background="@color/color_DEAA4A"
                android:padding="@dimen/dp_2"
                android:layout_marginStart="@dimen/dd_dp10"
                android:layout_marginEnd="@dimen/dd_dp10"
                android:visibility="gone"
                android:text="群"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/red_package_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp18"
                android:textColor="@color/color_333333"
                android:text="单个金额"/>
        </LinearLayout>
        <EditText
            android:id="@+id/red_package_money_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/red_package_money_format"
            android:layout_toEndOf="@+id/red_package_type"
            android:gravity="end"
            android:hint="0.00"
            android:textColor="@color/app_txt_999999"
            android:background="@null"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/red_package_money_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp18"
            android:text="元"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/red_package_count_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_corner"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/red_package_money_rl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/red_package_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp18"
            android:textColor="@color/color_333333"
            android:text="红包个数"/>
        <EditText
            android:id="@+id/red_package_amount_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/red_package_count_format"
            android:layout_toEndOf="@+id/red_package_count"
            android:gravity="end"
            android:hint="0"
            android:inputType="number"
            android:textColor="@color/app_txt_999999"
            android:background="@null"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/red_package_count_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp18"
            android:text="个"/>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/group_member_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本群共3人"
        android:textSize="@dimen/sp12"
        android:textColor="@color/app_txt_999999"
        android:layout_marginTop="@dimen/dd_dp10"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/red_package_count_rl"
        app:layout_constraintStart_toStartOf="@+id/red_package_count_rl"
        app:layout_goneMarginTop="@dimen/dd_dp10"/>

    <EditText
        android:id="@+id/red_package_money_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="恭喜发财，大吉大利"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        android:textColor="@color/app_txt_999999"
        android:background="@drawable/white_corner"
        app:layout_constraintTop_toBottomOf="@+id/group_member_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_goneMarginTop="@dimen/dd_dp10"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/red_package_money_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_48"
        app:layout_constraintTop_toBottomOf="@+id/red_package_money_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="￥0.00"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/send_red_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送红包"
        android:visibility="visible"
        android:paddingEnd="@dimen/dp_40"
        android:paddingStart="@dimen/dp_40"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/sp18"
        android:enabled="false"
        android:layout_marginTop="@dimen/dd_dp10"
        android:background="@drawable/red_package_btn_bg_efefef"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_package_money_show"/>
</androidx.constraintlayout.widget.ConstraintLayout>