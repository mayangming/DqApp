<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">
    <com.da.library.widget.CommTitle
        android:id="@+id/alipayRedDetailsCommTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/alipayRedDetailsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/recycler_view_refresh"
        android:layout_below="@id/alipayRedDetailsCommTitle"/>
    <TextView
        android:id="@+id/alipayRedDetailsMine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/alipay_red_details_mine"
        android:textColor="@color/text_blue"
        android:layout_marginBottom="@dimen/dd_dp20"/>
</RelativeLayout>
