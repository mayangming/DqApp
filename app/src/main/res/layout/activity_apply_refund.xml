<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F8F8F8">
    <com.da.library.widget.CommTitle
        android:id="@+id/apply_refund_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/apply_refund_task_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp14"
        android:textColor="@color/color_333333"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingVertical="@dimen/dd_dp11"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@+id/apply_refund_title"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="任务ID：683670973623"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingVertical="@dimen/dd_dp11"
        android:layout_marginTop="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@+id/apply_refund_task_id"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp14"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="退款金额:"/>
        <TextView
            android:id="@+id/apply_refund_task_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_EF5B40"
            tools:text="$17.82"/>
    </LinearLayout>
    <TextView
        android:id="@+id/submit_refund"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textSize="@dimen/dd_dp20"
        android:textColor="@color/white"
        android:layout_marginBottom="76dp"
        android:gravity="center"
        android:paddingVertical="@dimen/dd_dp6"
        android:background="@drawable/btn_oval_f23939_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>