<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dd_dp6"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/friend_head"
        android:layout_width="@dimen/dd_dp50"
        android:layout_height="@dimen/dd_dp50"
        tools:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/friend_head"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dd_dp6"
            android:textSize="@dimen/sp18"
            android:textColor="@color/color_333333"
            tools:text="你好啊"/>
        <TextView
            android:id="@+id/red_package_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dd_dp6"
            android:layout_marginTop="@dimen/dd_dp10"
            android:textColor="@color/app_txt_999999"
            android:textSize="@dimen/sp_12"
            tools:text="10：56"/>
    </LinearLayout>
    <TextView
        android:id="@+id/friend_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp16"
        tools:text="红包金额:(132元)"/>
</RelativeLayout>