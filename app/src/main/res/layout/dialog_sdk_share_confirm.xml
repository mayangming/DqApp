<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_bg_4dp"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/dialogShareLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dd_dp20"
        android:src="@mipmap/icon_sdk_gou"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dd_dp15"
        android:layout_below="@id/dialogShareLogo"
        android:textColor="@color/black"
        android:text="@string/sended_txt"
        android:textSize="@dimen/sp15"/>


    <RelativeLayout
        android:layout_marginTop="@dimen/dd_dp20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44"
        android:layout_marginBottom="@dimen/dd_dp5">
        <View
            android:id="@+id/center_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/color_efeff4"/>

        <TextView
            android:id="@+id/dialogShareExit"
            style="@style/dialog_btn"
            android:layout_toLeftOf="@+id/center_line"
            android:text="@string/share_dialog_cancel"/>

        <TextView
            android:id="@+id/dialogEditStay"
            style="@style/dialog_btn"
            android:layout_toRightOf="@+id/center_line"
            android:text="@string/stay_cn_txt"
            android:textColor="@color/color_5495e8"/>

    </RelativeLayout>

</LinearLayout>
