<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.da.library.view.DqToolbar
        android:id="@+id/toolbar"
        app:dqtTitle="@string/setting_safe_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:textSize="@dimen/dd_dp12"
        android:layout_marginTop="@dimen/dd_dp15"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_marginStart="@dimen/dd_dp15" />
    <EditText
        android:id="@+id/loginPwdSettingActivityEtPhone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp49"
        android:hint="@string/setting_login_pwd_hint"
        android:inputType="number"
        android:maxLines="1"
        android:textColorHint="@color/text_blue_pressed"
        android:textSize="@dimen/dd_dp14"
        android:background="@color/white"
        android:maxLength="11"
        android:ellipsize="end"
        android:paddingLeft="@dimen/dd_dp15"
        android:layout_marginTop="@dimen/dd_dp5"/>
    <View
        style="@style/OnePxDivider">
    </View>
    <RelativeLayout
        android:id="@+id/loginPwdSettingActivityLayoutCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp50"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:id="@+id/loginPwdSettingActivityTxtCode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dd_dp49"
            android:gravity="center"
            android:text="@string/codes"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="@dimen/dd_dp15" />

        <EditText
            android:id="@+id/loginPwdSettingActivityEtCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp49"
            android:layout_toRightOf="@id/loginPwdSettingActivityTxtCode"
            android:hint="@string/setting_login_pwd_hint_code"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColorHint="@color/text_blue_pressed"
            android:textSize="@dimen/dd_dp14"
            android:layout_marginLeft="@dimen/dd_dp15"
            android:layout_marginStart="@dimen/dd_dp15"
            tools:ignore="TextFields"
            android:layout_toEndOf="@id/loginPwdSettingActivityTxtCode" />

        <TextView
            android:id="@+id/loginPwdSettingActivityBtnCode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dd_dp35"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minEms="5"
            android:paddingLeft="@dimen/dd_dp10"
            android:paddingRight="@dimen/dd_dp10"
            android:text="@string/setting_login_pwd_get_code"
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/dd_dp13"/>
    </RelativeLayout>

    <View
        style="@style/OnePxDivider">
    </View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_password"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/dd_dp15"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_marginStart="@dimen/dd_dp15" />
    <EditText
        android:id="@+id/loginPwdSettingActivityEtPwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp49"
        android:hint="@string/setting_login_pwd_newpwd"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColorHint="@color/text_blue_pressed"
        android:textSize="@dimen/dd_dp14"
        android:background="@color/white"
        android:maxLength="15"
        android:ellipsize="end"
        android:paddingLeft="@dimen/dd_dp15"
        android:layout_marginTop="@dimen/dd_dp5"
        />
    <View
        style="@style/OnePxDivider">
    </View>
    <EditText
        android:id="@+id/loginPwdSettingActivityEtPwdAgain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp49"
        android:hint="@string/setting_login_pwd_newpwd_again"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColorHint="@color/text_blue_pressed"
        android:textSize="@dimen/dd_dp14"
        android:background="@color/white"
        android:maxLength="15"
        android:ellipsize="end"
        android:paddingLeft="@dimen/dd_dp15"
        />
    <View
        style="@style/OnePxDivider">
    </View>

    <TextView
        style="@style/LoginRegisterButtonStyle"
        android:id="@+id/loginPwdSettingActivityBtnConfirm"
        android:layout_marginTop="@dimen/dd_dp30"
        android:gravity="center"
        android:text="@string/confirm"
        android:enabled="true"
        android:textSize="@dimen/dd_dp14"/>
</LinearLayout>
