<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_66000000"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/poke_dialog_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/poke_dialog_icon"
            android:layout_width="@dimen/dd_dp80"
            android:layout_height="@dimen/dd_dp80"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dd_dp24"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/poke_dialog_tips"/>

        <TextView
            android:id="@+id/poke_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poke_dialog_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dd_dp18"
            android:layout_marginLeft="@dimen/dd_dp10"
            android:layout_marginRight="@dimen/dd_dp10"
            android:layout_marginTop="@dimen/dd_dp18"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="向xxxx发起通知"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/dd_dp18"/>

        <RelativeLayout
            android:id="@+id/poke_dialog_selected_rlyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poke_dialog_title"
            android:layout_marginBottom="@dimen/dd_dp16"
            android:layout_marginLeft="@dimen/dd_dp10"
            android:layout_marginRight="@dimen/dd_dp10"
            android:visibility="visible">

            <TextView
                android:id="@+id/poke_dialog_selected_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送给"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/dd_dp16"/>

            <TextView
                android:id="@+id/poke_dialog_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/poke_dialog_selected_tips"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/icon_right_step"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="群内所有人"
                android:textColor="@color/text_blue_pressed"
                android:textSize="@dimen/dd_dp16"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/poke_dialog_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@+id/poke_dialog_selected_rlyt"
            android:layout_margin="@dimen/dd_dp10"
            android:background="@drawable/poke_edittext_bg"
            android:hint="快来聊天"
            android:maxLength="20"
            android:maxLines="1"
            android:minLines="1"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:singleLine="true"
            android:textColorHint="@color/text_blue_pressed"
            android:textSize="@dimen/dd_dp15"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp44"
            android:layout_below="@+id/poke_dialog_edittext"
            android:layout_marginLeft="@dimen/dd_dp8"
            android:layout_marginRight="@dimen/dd_dp8">

            <View
                android:id="@+id/center_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/color_efeff4"/>

            <TextView
                android:id="@+id/poke_dialog_cancel"
                style="@style/dialog_btn"
                android:layout_toLeftOf="@+id/center_line"
                android:text="@string/share_dialog_cancel"/>

            <TextView
                android:id="@+id/poke_dialog_ok"
                style="@style/dialog_btn"
                android:layout_toRightOf="@+id/center_line"
                android:text="@string/comm_ok"
                android:textColor="@color/color_438edb"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_efeff4"/>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
