<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dd_dp92"
    android:background="@android:color/white">

    <FrameLayout
        android:id="@+id/cnPicCatalogImageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/cnPicCatalogImage"
            android:layout_width="@dimen/dd_dp75"
            android:layout_height="@dimen/dd_dp75"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dd_dp14"
        android:layout_toRightOf="@id/cnPicCatalogImageLayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cnPicCatalogName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dd_dp16"/>

        <TextView
            android:id="@+id/cnPicCatalogNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dp4"
            android:textSize="@dimen/dd_dp13"/>

    </LinearLayout>

</RelativeLayout>