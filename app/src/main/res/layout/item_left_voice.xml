<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/message_content"
        android:layout_width="@dimen/dd_dp100"
        android:layout_height="wrap_content"
        android:padding="@dimen/dd_dp10"
        android:layout_centerVertical="true"
        android:background="@mipmap/icon_receiver_text_node_normal"
        android:gravity="start|center">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_left_voice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dd_dp10"
            android:src="@drawable/chat_left_voice_anim"/>
        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12"
            tools:text="12s"/>
        <ProgressBar
            android:id="@+id/voice_loading"
            android:layout_width="@dimen/dd_dp20"
            android:layout_height="@dimen/dd_dp20"
            android:layout_marginStart="@dimen/dp_10"
            android:visibility="gone"/>
    </LinearLayout>
    <View
        android:id="@+id/voice_unread"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:background="@drawable/red_point"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/message_content"/>
</RelativeLayout>