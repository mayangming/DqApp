<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <com.da.library.widget.CommTitle
        android:id="@+id/ait_commtitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44"/>

    <com.da.library.widget.CommSearchEditText
        android:id="@+id/ait_search_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44"
        app:stvSearchStyle="DefaultSearch"/>

    <View
        android:id="@+id/ait_empty_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp7"
        android:background="@color/color_ebebeb"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/ait_all_rlyt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp50"
        android:layout_gravity="center"
        android:background="@drawable/comm_item_selector"
        android:orientation="horizontal"
        android:paddingRight="12dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ait_all_icon"
            android:layout_width="@dimen/dd_dp34"
            android:layout_height="@dimen/dd_dp34"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dd_dp8"
            android:scaleType="centerCrop"
            android:src="@drawable/user_avatar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/ait_all_icon"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="32"
            android:text="@string/ait_all"
            android:textColor="@color/black"
            android:textSize="@dimen/dd_dp16"/>

        <!--底部分割线-->
        <View
            android:id="@+id/item_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_marginLeft="@dimen/dd_dp9"
            android:layout_marginRight="@dimen/dd_dp9"
            android:background="@color/app_line"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px1"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/ait_member_flyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/ait_refreshlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnableAutoLoadMore="false"
            app:srlEnableLoadMore="true">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlClassicsSpinnerStyle="Scale"
                app:srlDrawableProgress="@drawable/ic_progress_puzzle"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ait_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"/>

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <TextView
            android:id="@+id/ait_center_tv"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/rc_bg_toast"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30.0dip"
            android:visibility="invisible"/>

        <com.da.library.widget.SideBar
            android:id="@+id/ait_sidebar"
            android:layout_width="20.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center"/>
    </FrameLayout>

</LinearLayout>
