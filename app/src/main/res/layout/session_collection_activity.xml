<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f3f3f3"
    android:orientation="vertical">
    <com.da.library.widget.CommTitle
        android:id="@+id/sessionCollectionActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/sessionCollectionActivityRefreshLayout"
        android:layout_below="@+id/collectionActivityTitle"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="Scale"
            app:srlDrawableProgress="@drawable/ic_progress_puzzle" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sessionCollectionActivityRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="Scale"
            app:srlDrawableProgress="@drawable/ic_progress_puzzle" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <RelativeLayout
        android:id="@+id/sessionCollectionActivityNoContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dd_dp150">
        <ImageView
            android:id="@+id/sessionCollectionActivityNoContentImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/cn_img_collection_no_content"/>
        <TextView
            android:id="@+id/sessionCollectionActivityNoContentTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dp10"
            android:gravity="center_horizontal"
            android:layout_below="@id/sessionCollectionActivityNoContentImg"
            android:text="@string/collection_no_content"
            android:textSize="@dimen/dd_dp15"
            android:textColor="@color/color_ababab"/>
    </RelativeLayout>
</LinearLayout>
