<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_page_bg"
    android:orientation="vertical">


    <com.da.library.widget.CommTitle
        android:id="@+id/add_bank_card_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/add_bank_card"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/please_add_self_bank_card"
        android:textSize="@dimen/dd_dp12"
        android:layout_marginLeft="@dimen/dd_dp12"
        android:layout_marginRight="@dimen/dd_dp12"
        android:layout_marginTop="@dimen/dd_dp8"
        android:layout_marginBottom="@dimen/dd_dp8"
        android:textColor="@color/app_txt_999999"
        tools:ignore="SpUsage" />

    <LinearLayout
        style="@style/comm_sub_item_layout">

        <TextView
            style="@style/comm_sub_item_left_tv"
            android:text="@string/card_owner" />

        <TextView
            android:id="@+id/add_bank_card_name_tv"
            style="@style/comm_sub_item_right_tv"/>
    </LinearLayout>

    <View style="@style/item_line"/>

    <LinearLayout
        style="@style/comm_sub_item_layout">

        <TextView
            style="@style/comm_sub_item_left_tv"
            android:text="@string/card_number" />

        <EditText
            android:maxLength="26"
            android:inputType="number"
            android:id="@+id/add_bank_card_et"
            style="@style/comm_sub_item_right_et"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/add_bank_card_clear_iv"
            style="@style/clear_input_style_no_margin"/>
    </LinearLayout>

    <Button
        android:id="@+id/add_bank_card_btn"
        style="@style/comm_corner_btn"
        android:layout_marginTop="@dimen/dd_dp30"
        android:layout_marginLeft="@dimen/dd_dp12"
        android:layout_marginRight="@dimen/dd_dp12"
        android:text="@string/nextStep"
        android:textColor="@color/white"/>

</LinearLayout>