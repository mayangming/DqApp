<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.da.library.widget.CommTitle
        android:id="@+id/task_manager_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44" />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/task_manager_content_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorHeight="0dp"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/task_manager_content_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dd_dp10"/>
</LinearLayout>