<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_20"
    android:paddingStart="@dimen/dd_dp40"
    android:paddingEnd="@dimen/dd_dp40"
    android:paddingBottom="@dimen/dd_dp40"
    android:background="@mipmap/dialog_vip_exchange_result_bg">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_vip_exchange_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_26"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="兑换失败" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_vip_exchange_result_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/dialog_vip_exchange_result_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/dialog_vip_exchange_fail"/>
    <LinearLayout
        android:id="@+id/dialog_vip_exchange_result_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/dialog_vip_exchange_result_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:id="@+id/dialog_vip_exchange_result_fail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp16"
                android:textColor="@color/color_333333"
                android:text="您的可兑换人数不足"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp12"
                android:textColor="@color/app_txt_999999"
                android:layout_marginTop="@dimen/dp_5"
                android:text="您可以去分享增加可兑换人数"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dialog_vip_exchange_result_success_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_vip_exchange_result_success_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp16"
                android:textColor="@color/color_333333"
                android:text="@string/vip_exchange_time"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp16"
                android:layout_marginTop="@dimen/dd_dp5"
                android:layout_marginBottom="@dimen/dd_dp5"
                android:textColor="@color/color_333333"
                android:text="已添加到您的账号"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_vip_exchange_result_success_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp16"
                android:textColor="@color/color_333333"
                android:text="@string/vip_exchange_count"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dialog_vip_exchange_result_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:layout_marginTop="@dimen/dd_dp60"
        android:background="@mipmap/dialog_vip_exchange_sure_btn_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/sp18"
        app:layout_constraintTop_toBottomOf="@+id/dialog_vip_exchange_result_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>