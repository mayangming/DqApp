<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">

    <RelativeLayout
        android:id="@+id/area_head_contain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:padding="@dimen/dp_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <FrameLayout
            android:id="@+id/head_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">
            <ImageView
                android:id="@+id/area_head_icon"
                android:layout_width="@dimen/dd_dp48"
                android:layout_height="@dimen/dd_dp48"
                android:src="@drawable/user_avatar"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_2"
                android:scaleType="centerCrop"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/area_head_icon_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_alignBottom="@+id/head_container"
            android:layout_alignEnd="@+id/head_container"
            android:src="@mipmap/icon_vip"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/area_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:textSize="@dimen/sp18"
        android:textColor="@color/color_49649D"
        app:layout_constraintTop_toTopOf="@+id/area_head_contain"
        app:layout_constraintLeft_toRightOf="@+id/area_head_contain"
        tools:text="用户名字"/>
    <TextView
        android:id="@+id/area_dynamic_word_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp16"
        android:textColor="@color/color_333333"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/area_user_name"
        app:layout_constraintStart_toStartOf="@+id/area_user_name"
        tools:text="动态文字"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/area_dynamic_photo_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@+id/area_head_contain"
        app:layout_constraintStart_toEndOf="@+id/area_head_contain"
        app:layout_constraintTop_toBottomOf="@+id/area_dynamic_word_tv"/>
    <TextView
        android:id="@+id/area_dynamic_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/area_dynamic_photo_rv"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp12"
        android:textColor="@color/app_txt_999999"
        app:layout_constraintTop_toBottomOf="@+id/area_dynamic_photo_rv"
        app:layout_constraintLeft_toRightOf="@+id/area_head_contain"
        app:layout_goneMarginTop="@dimen/dp_5"
        tools:text="8分钟前"/>
    <TextView
        android:id="@+id/area_dynamic_del_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/color_49649D"
        android:textSize="@dimen/sp12"
        android:text="删除"
        app:layout_constraintTop_toBottomOf="@+id/area_dynamic_photo_rv"
        app:layout_constraintLeft_toRightOf="@+id/area_dynamic_time_tv" />

    <ImageView
        android:id="@+id/area_dynamic_review_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/area_dynamic_review"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/area_dynamic_photo_rv"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/area_review_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/area_review_bg"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/area_dynamic_review_iv"
        app:layout_constraintStart_toEndOf="@+id/area_head_contain"
        app:layout_constraintEnd_toEndOf="@+id/area_dynamic_review_iv">
        <TextView
            android:id="@+id/area_ding_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_5"
            android:textColor="@color/color_49649D"
            android:textSize="@dimen/sp16"
            android:visibility="visible"
            tools:text="闫志峰，妈妈，安"/>
        <View
            android:id="@+id/area_divider_v"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_E4E4E4"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/area_review_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>