<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_20"
    android:background="@drawable/white_corner">
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_pay_close"
        android:layout_gravity="end"/>

    <TextView
        android:id="@+id/tip_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="你的口令已生成"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp18"
        android:textStyle="bold"
        android:layout_marginVertical="@dimen/dp_10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="已帮你自动复制，选择好友粘贴给他吧"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_20"
        android:padding="@dimen/dp_10"
        android:background="@drawable/bg_corner_5_e4e4e4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【斗圈】下载就能领红包(内测版只适用于安卓手机)"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp12"
            android:layout_marginBottom="@dimen/dp_20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp12"
            android:text="点击下方下载连接"/>

        <TextView
            android:id="@+id/invite_friend_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp12"
            android:layout_marginTop="@dimen/dp_10"
            tools:text="https://a2.app.qq.com/o/simple.jsp?p kgname=com.ss.android.article.litec key=CK1431889492477"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/go_wx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/go_wx"/>
</LinearLayout>