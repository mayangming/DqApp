<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_page_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mineUserProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp75"
            android:background="@drawable/comm_item_selector"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dd_dp12"
            android:paddingRight="@dimen/dd_dp12">

            <ImageView
                android:id="@+id/mineUserProfileAvatar"
                android:layout_width="@dimen/dd_dp56"
                android:layout_height="@dimen/dd_dp56"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mineUserProfileName"
                    style="@style/mine_item_text"
                    android:ellipsize="end"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:text="@string/app_name"/>

                <TextView
                    android:id="@+id/mineUserProfileNumber"
                    style="@style/comm_sub_small_txt"
                    android:layout_marginTop="@dimen/dd_dp8"
                    android:ellipsize="end"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:visibility="gone"/>
            </LinearLayout>

            <ImageView
                style="@style/comm_arrow_right"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mineScanLayout"
            android:layout_marginTop="@dimen/dd_dp20"
            style="@style/mine_item_layout"
            android:gravity="center_vertical">

            <ImageView
                style="@style/mine_item_icon"
                android:src="@mipmap/icon_mine_scan"/>

            <TextView
                style="@style/mine_item_text"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/mine_scan"/>

            <ImageView
                style="@style/comm_arrow_right"/>
        </LinearLayout>

        <View style="@style/item_line"/>

        <LinearLayout
            android:id="@+id/mineQRCodeLayout"
            style="@style/mine_item_layout"
            android:gravity="center_vertical">

            <ImageView
                style="@style/mine_item_icon"
                android:src="@mipmap/icon_mine_qr"/>

            <TextView
                style="@style/mine_item_text"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/mine_qr"/>

            <ImageView
                style="@style/comm_arrow_right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine_wallet_layout"
            android:layout_marginTop="@dimen/dd_dp20"
            style="@style/mine_item_layout">

            <ImageView
                style="@style/mine_item_icon"
                android:src="@mipmap/icon_mine_wallet"/>

            <TextView
                style="@style/mine_item_text"
                android:layout_marginLeft="@dimen/dd_dp8"
                android:layout_weight="1"
                android:text="@string/mine_my_wallet"/>

            <ImageView
                style="@style/comm_arrow_right"/>
        </LinearLayout>

        <View style="@style/item_line"/>

        <LinearLayout
            android:id="@+id/mineJRMFLayout"
            style="@style/mine_item_layout"
            android:visibility="gone"
            android:gravity="center_vertical">

            <ImageView
                style="@style/mine_item_icon"
                android:src="@mipmap/icon_mine_jrmf_wallet"/>

            <TextView
                style="@style/mine_item_text"
                android:layout_marginLeft="@dimen/dd_dp8"
                android:layout_weight="1"
                android:text="@string/mine_jrmf_wallet"/>

            <ImageView
                style="@style/comm_arrow_right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mineAlipayWalletLayout"
            style="@style/mine_item_layout">

            <ImageView
                style="@style/mine_item_icon"
                android:src="@mipmap/icon_mine_alipay_wallet"/>

            <TextView
                style="@style/mine_item_text"
                android:layout_marginLeft="@dimen/dd_dp8"
                android:layout_weight="1"
                android:text="@string/mine_alipay_red"/>

            <ImageView
                style="@style/comm_arrow_right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mineCollectionLayout"
            style="@style/mine_item_layout"
            android:layout_marginTop="@dimen/dd_dp20"
            android:gravity="center_vertical">

            <ImageView
                style="@style/mine_item_icon"
                android:src="@mipmap/icon_mine_collection"/>

            <TextView
                style="@style/mine_item_text"
                android:layout_marginLeft="@dimen/dd_dp8"
                android:layout_weight="1"
                android:text="@string/collection"/>

            <ImageView
                style="@style/comm_arrow_right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mineSettingLayout"
            android:layout_marginTop="@dimen/dd_dp20"
            style="@style/mine_item_layout">

            <ImageView
                style="@style/mine_item_icon"
                android:src="@mipmap/icon_mine_setting"/>

            <TextView
                style="@style/mine_item_text"
                android:layout_marginLeft="@dimen/dd_dp8"
                android:layout_weight="1"
                android:text="@string/setting"/>

            <ImageView
                android:id="@+id/mineSettingImgRedDot"
                android:layout_width="@dimen/dd_dp8"
                android:layout_height="@dimen/dd_dp8"
                android:layout_marginRight="@dimen/dd_dp10"
                android:src="@mipmap/icon_red_dot"
                android:visibility="gone"/>

            <ImageView
                style="@style/comm_arrow_right"/>
        </LinearLayout>

        <View style="@style/item_line"/>

        <LinearLayout
            android:id="@+id/mineHelpLayout"
            style="@style/mine_item_layout"
            android:gravity="center_vertical">

            <ImageView
                style="@style/mine_item_icon"
                android:src="@mipmap/icon_mine_helper"/>

            <TextView
                style="@style/mine_item_text"
                android:layout_marginLeft="@dimen/dd_dp8"
                android:layout_weight="1"
                android:text="@string/mine_help"/>

            <ImageView
                style="@style/comm_arrow_right"/>
        </LinearLayout>

        <View style="@style/item_line"/>

        <LinearLayout
            android:id="@+id/mineFeedback"
            style="@style/mine_item_layout"
            android:gravity="center_vertical">

            <ImageView
                style="@style/mine_item_icon"
                android:src="@mipmap/icon_mine_feedback"/>

            <TextView
                style="@style/mine_item_text"
                android:layout_marginLeft="@dimen/dd_dp8"
                android:layout_weight="1"
                android:text="@string/mine_feedback"/>

            <ImageView
                style="@style/comm_arrow_right"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>