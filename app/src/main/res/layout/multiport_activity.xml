<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_page_bg">

    <TextView
        android:id="@+id/close_web_login_confirm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/comm_btn_4dp_corner_selector"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="关闭"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:ignore="SpUsage"/>

    <View
        style="@style/OnePxDivider"
        android:layout_below="@+id/close_web_login_confirm_tv"
        android:background="@color/color_d4d4d6"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/close_web_login_confirm_tv"
        android:layout_marginTop="80dp">

        <ImageView
            android:id="@+id/windows_login_state_iv"
            android:layout_width="@dimen/dd_dp160"
            android:layout_height="@dimen/dd_dp124"
            android:layout_centerHorizontal="true"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/windows_login_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/windows_login_state_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="@color/text_title_black"
            android:textSize="16dp"
            tools:ignore="SpUsage"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/login_or_exit_tv"
            android:layout_width="@dimen/dd_dp130"
            android:layout_height="@dimen/dd_dp34"
            android:layout_centerHorizontal="true"
            android:background="@drawable/comm_btn_4dp_corner_selector"
            android:gravity="center"
            android:padding="6dp"
            android:textColor="@color/white"/>


        <TextView
            android:id="@+id/login_cancel_tv"
            android:layout_width="@dimen/dd_dp130"
            android:layout_height="@dimen/dd_dp34"
            android:layout_below="@+id/login_or_exit_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="@dimen/dd_dp28"
            android:background="@drawable/multiport_selector"
            android:gravity="center"
            android:padding="6dp"
            android:textColor="@color/text_blue_pressed"
            android:textSize="15dp"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>
