<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <com.da.library.view.DqToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44"
        app:dqtTitle="@string/wallet_withdraw_result"/>

    <ImageView
        android:id="@+id/withdraw_result_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dp50"
        android:src="@mipmap/withdraw_result_success"/>

    <TextView
        android:id="@+id/withdraw_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_464646"
        android:layout_marginTop="@dimen/dd_dp20"
        android:letterSpacing="0.1"
        tools:text="申请提现成功"/>

    <TextView
        android:id="@+id/withdraw_result_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/app_txt_999999"
        android:layout_marginTop="@dimen/dd_dp20"
        android:layout_marginStart="@dimen/dd_dp100"
        android:layout_marginEnd="@dimen/dd_dp100"
        android:gravity="center_horizontal"
        android:letterSpacing="0.1"
        android:lineSpacingMultiplier="1.3"
        tools:text="我们将在2小时内，将提现金额转入您的微信账户"/>

    <LinearLayout
        android:id="@+id/withdraw_result_next_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dd_dp100"
        android:layout_marginStart="@dimen/dd_dp20"
        android:layout_marginEnd="@dimen/dd_dp20">
        <TextView
            android:id="@+id/withdraw_record"
            android:layout_width="@dimen/dd_dp150"
            android:layout_height="@dimen/dd_dp42"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/btn_white_bg"
            android:gravity="center"
            android:text="交易记录"/>
        <TextView
            android:id="@+id/withdraw_back"
            android:layout_width="@dimen/dd_dp150"
            android:layout_height="@dimen/dd_dp42"
            android:textSize="@dimen/sp_16"
            android:layout_marginStart="@dimen/dd_dp20"
            android:layout_marginLeft="@dimen/dd_dp20"
            android:background="@mipmap/btn_normal_1"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="返回"/>
    </LinearLayout>
</LinearLayout>