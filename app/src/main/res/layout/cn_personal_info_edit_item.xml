<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_delete_desc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/item_bg_selector"
            android:paddingLeft="@dimen/dd_dp14"
            android:paddingRight="@dimen/dd_dp14"
            android:src="@mipmap/cn_icon_delete_describe" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rc_item_list_selector"
            android:drawablePadding="@dimen/dd_dp10"
            android:drawableRight="@mipmap/icon_right_step"
            android:paddingBottom="@dimen/dd_dp12"
            android:paddingRight="4dp"
            android:paddingTop="@dimen/dd_dp12"
            android:text="@string/describe"
            android:textColor="@color/black"
            android:textSize="@dimen/dd_dp16" />

        <TextView
            android:layout_width="@dimen/dd_dp1"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/app_page_bg" />

        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dd_dp10"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="@string/input_describe"
            android:textColor="@color/black"
            android:textSize="@dimen/dd_dp15" />

        <ImageView
            android:id="@+id/iv_clear_input"
            style="@style/clear_input_style"
            android:visibility="gone" />


    </LinearLayout>

    <View
        style="@style/item_line"
        android:layout_marginLeft="@dimen/dd_dp14" />

</LinearLayout>