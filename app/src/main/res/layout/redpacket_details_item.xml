<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/redpacket_details_item_avater"
            android:layout_width="@dimen/dd_dp36"
            android:layout_height="@dimen/dd_dp36"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dd_dp14"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dd_dp14"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/redpacket_details_item_name"
                    android:layout_width="@dimen/dd_dp112"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#353535"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/redpacket_details_item_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dd_dp9"
                    android:maxLines="1"
                    android:textColor="@color/color_565656"
                    android:textSize="@dimen/dd_dp16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/redpacket_details_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:textColor="#353535" />

                <TextView
                    android:id="@+id/redpacket_details_item_best"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/best_lucky"
                    android:drawablePadding="4dp"
                    android:maxLines="1"
                    android:text="@string/redpacket_details_best_luck"
                    android:textColor="@color/color_c85749"
                    android:textSize="@dimen/dd_dp12"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/OnePxDivider"
        android:layout_marginLeft="@dimen/dd_dp14"
        android:layout_marginStart="@dimen/dd_dp14" />
</LinearLayout>
