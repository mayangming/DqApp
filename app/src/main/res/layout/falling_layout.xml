<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:background="@color/black_overlay">
    <com.red.libary.weight.FallingLayout
        android:id="@+id/red_package_falling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/red_package_count_tip"/>

    <RelativeLayout
        android:id="@+id/red_package_count_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_40">
        <ImageView
            android:id="@+id/red_package_falling_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/red_close"/>
        <ImageView
            android:id="@+id/red_package_count_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/red_package_falling_close"
            android:layout_marginTop="@dimen/dd_dp50"
            android:src="@mipmap/red_package_tip"/>
        <TextView
            android:id="@+id/red_package_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FED83B"
            android:textSize="@dimen/sp10"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignStart="@+id/red_package_count_iv"
            android:layout_alignEnd="@+id/red_package_count_iv"
            android:layout_alignTop="@+id/red_package_count_iv"
            android:text="加油呀!好运马上来~"/>
    </RelativeLayout>
</RelativeLayout>