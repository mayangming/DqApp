<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F8F8F8">
    <com.da.library.widget.CommTitle
        android:id="@+id/task_send_details_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dd_dp48"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/color_F74B1D"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/refund_step_1"
            android:layout_width="@dimen/dd_dp24"
            android:layout_height="@dimen/dd_dp24"
            android:background="@drawable/solid_f74d1b"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <View
            android:id="@+id/refund_step_2"
            android:layout_width="@dimen/dd_dp24"
            android:layout_height="@dimen/dd_dp24"
            android:background="@drawable/solid_f74d1b"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:id="@+id/refund_step_3"
            android:layout_width="@dimen/dd_dp24"
            android:layout_height="@dimen/dd_dp24"
            android:background="@drawable/hollow_f74d1b"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_30"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/refund_step_desc_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交审核"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="2020.04.15 09.18"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/refund_step_desc_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在审核"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="2020.04.15 09.18"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/refund_step_desc_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/refund_step_desc_3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核成功"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="2020.04.15 09.18"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingVertical="@dimen/dd_dp11"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white">
        <TextView
            android:id="@+id/refund_task_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp14"
            tools:text="任务ID：683670973623"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_F8F8F8"
            android:layout_marginVertical="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款金额:  "/>
            <TextView
                android:id="@+id/refund_amount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_F74B1D"
                android:textSize="@dimen/sp14"
                tools:text="￥27.98"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>