<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/red_package_details_top_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.da.library.widget.CommTitle
        android:id="@+id/red_package_details_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/red_package_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dp100"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/head_icon"
            android:layout_width="@dimen/dd_dp20"
            android:layout_height="@dimen/dd_dp20"
            android:src="@mipmap/message_send_fail"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_txt_333333"
            android:textSize="@dimen/sp14"
            android:layout_marginStart="@dimen/dd_dp10"
            android:text="用户名字"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/user_package_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12"
            android:background="@color/color_DEAA4A"
            android:padding="@dimen/dp_2"
            android:layout_marginStart="@dimen/dd_dp10"
            android:visibility="gone"
            android:text="群"/>
    </LinearLayout>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/red_package_details_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜发财，大吉大利"
        android:textColor="@color/app_txt_999999"
        android:layout_marginTop="@dimen/dd_dp10"
        android:textSize="@dimen/sp12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_package_ll"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/red_package_details_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="@dimen/sp_42"
        android:layout_marginTop="@dimen/dd_dp30"
        android:textColor="@color/color_DEAA4A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_package_details_description"
        tools:text="10000元"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/red_package_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_DEAA4A"
        android:text="已存入零钱，可用于发红包"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_package_details_amount"/>
    <LinearLayout
        android:id="@+id/red_package_details_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dd_dp50"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_package_destination">
        <View
            android:id="@+id/divider_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_F8F8F8"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/red_package_details_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3个红包，3分钟被抢光"
            android:layout_marginStart="@dimen/dd_dp10"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/app_txt_999999"/>
        <View
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dd_dp10"
            android:background="@color/color_E4E4E4"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/red_package_user_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_package_details_group"
        app:layout_goneMarginTop="@dimen/dd_dp10"/>
</android.support.constraint.ConstraintLayout>