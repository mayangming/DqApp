<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/dd_dp44"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:visibility="gone"
        android:id="@+id/toolbar_left_extra"
        android:src="@mipmap/main_title_menu"
        android:layout_gravity="start"
        android:background="@drawable/toolbar_btn_pressed_20dp_selector"
        android:paddingLeft="@dimen/dd_dp10"
        android:paddingRight="@dimen/dd_dp10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/toolbar_title"
        android:textColor="@color/text_title_black"
        android:textSize="@dimen/title_text_size"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/toolbar_right_extra"
        android:src="@mipmap/main_title_more"
        android:layout_alignParentRight="true"
        android:background="@drawable/toolbar_btn_pressed_20dp_selector"
        android:paddingLeft="@dimen/dd_dp10"
        android:paddingRight="@dimen/dd_dp10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/toolbar_right_search"
        android:src="@mipmap/search"
        android:layout_toLeftOf="@+id/toolbar_right_extra"
        android:background="@drawable/toolbar_btn_pressed_20dp_selector"
        android:paddingLeft="@dimen/dd_dp10"
        android:paddingRight="@dimen/dd_dp10"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</RelativeLayout>