<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.da.library.widget.CommTitle
        android:id="@+id/recentlyContactsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/recentlyContactsListLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_new_chat"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dp5"
            android:textSize="@dimen/sp13"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dd_dp5"
            android:src="@mipmap/rp_arrow"/>
        <View
            style="@style/OnePxDivider"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dd_dp5"
        android:layout_gravity="center_vertical"
        android:text="@string/recently_chat"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp11"
        android:textColor="@color/black"
        android:background="@color/color_eeeeee"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recentlyContactsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/recentlyContactsImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableTop="@mipmap/messages_list_empty_bg"
        android:visibility="gone"
        android:drawablePadding="@dimen/dd_dp10"
        android:layout_marginTop="@dimen/dd_dp100"
        android:text="@string/loading_fail_txt"
        android:textColor="@color/color_5495e8"
        android:textSize="@dimen/sp12"/>

</LinearLayout>
