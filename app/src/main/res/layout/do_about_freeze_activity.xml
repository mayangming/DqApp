<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ebebeb">
    <com.da.library.widget.CommTitle
        android:id="@+id/doAboutFreezeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/doAboutFreezeTxtIns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inputDong"
        android:layout_marginRight="@dimen/dd_dp15"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_marginTop="@dimen/dd_dp10"
        android:textSize="12sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp40"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dd_dp10">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/zhongGuo"
            android:layout_marginLeft="@dimen/dd_dp15"
            android:layout_marginStart="@dimen/dd_dp15" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_right_step"
            android:layout_marginRight="@dimen/dd_dp15"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dd_dp15"/>
    </LinearLayout>
    <View
        style="@style/OnePxDivider"/>
    <EditText
        android:id="@+id/doAboutFreezeEtPhone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp49"
        android:hint="@string/phone"
        android:maxLines="1"
        android:inputType="phone"
        android:textColorHint="@color/color_e1e1e1"
        android:textSize="@dimen/dd_dp14"
        android:background="@color/white"
        android:maxLength="13"
        android:ellipsize="end"
        android:paddingLeft="@dimen/dd_dp14"/>
    <TextView
        android:id="@+id/doAboutFreezeBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp40"
        android:layout_marginTop="@dimen/dd_dp30"
        android:gravity="center"
        android:text="@string/nextStep"
        android:background="@drawable/btn_login_item_bg"
        android:textColor="@color/white"
        android:textSize="@dimen/dd_dp14"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_marginRight="@dimen/dd_dp15"/>
</LinearLayout>
