<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ebebeb">
    <com.da.library.widget.CommTitle
        android:id="@+id/freezeTypeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choiceDong"
        android:layout_marginRight="@dimen/dd_dp15"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_marginTop="@dimen/dd_dp10"
        android:textSize="12sp"/>
    <LinearLayout
        android:id="@+id/freezeTypeLayoutPhoneNum"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp40"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dd_dp10">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/phoneDong"
            android:layout_marginLeft="@dimen/dd_dp15"
            android:layout_marginStart="@dimen/dd_dp15" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_right_step"
            android:layout_marginRight="@dimen/dd_dp15"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dd_dp15"/>
    </LinearLayout>
</LinearLayout>
