<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_custom_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_bg_4dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dd_dp3">

    <TextView
        android:id="@+id/tv_message"
        style="@style/dialog_center_title_style"
        android:text="@string/perfect"
        android:textSize="@dimen/dd_dp16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44"
        android:layout_marginTop="@dimen/dd_dp20">

        <View
            android:id="@+id/center_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/color_efeff4" />

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/dialog_btn"
            android:layout_toLeftOf="@+id/center_line"
            android:text="@string/share_dialog_cancel" />

        <TextView
            android:id="@+id/tv_confirm"
            style="@style/dialog_btn"
            android:layout_toRightOf="@+id/center_line"
            android:text="@string/text_identification"
            android:textColor="@color/text_blue" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_efeff4" />
    </RelativeLayout>

</LinearLayout>