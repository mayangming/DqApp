<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_page_bg"
    tools:context=".contacts.activity.NewFriendDetailActivity">

    <com.da.library.widget.CommTitle
        android:id="@+id/new_friend_detail_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/start_user_profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp80"
        android:layout_marginTop="@dimen/dd_dp20"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/new_friend_detail_title_layout">
        <RelativeLayout
            android:id="@+id/vip_head_outline_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dp12">
            <ImageView
                android:id="@+id/new_friend_detail_header_iv"
                android:layout_width="@dimen/dd_dp50"
                android:layout_height="@dimen/dd_dp50"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/portrait"
                tools:ignore="RtlHardcoded" />
            <ImageView
                android:id="@+id/vip_head_outline"
                android:layout_width="@dimen/dd_dp66"
                android:layout_height="@dimen/dd_dp66"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/head_outtline"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/new_friend_detail_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dd_dp12"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1"
            android:textColor="@color/text_title_black"
            android:textSize="@dimen/dd_dp16"
            tools:ignore="RtlHardcoded,SpUsage" />

        <ImageView
            android:id="@+id/new_friend_detail_sex_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dd_dp5"
            android:scaleType="centerCrop"
            android:contentDescription="@string/sex"
            tools:src="@mipmap/icon_male"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <TextView
        android:id="@+id/new_friend_detail_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp100"
        android:paddingLeft="@dimen/dd_dp12"
        android:paddingTop="@dimen/dd_dp8"
        android:paddingRight="@dimen/dd_dp12"
        android:paddingBottom="@dimen/dd_dp8"
        android:layout_marginTop="@dimen/dd_dp15"
        android:textColor="@color/text_title_black"
        android:textSize="@dimen/dd_dp16"
        android:background="@color/white"
        tools:ignore="RtlHardcoded,SpUsage"
        app:layout_constraintTop_toBottomOf="@+id/start_user_profile"/>

    <TextView
        android:id="@+id/new_friend_detail_agree_tv"
        style="@style/comm_corner_btn"
        android:layout_height="@dimen/dd_dp40"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_marginRight="@dimen/dd_dp15"
        android:layout_marginTop="@dimen/dd_dp15"
        android:gravity="center"
        android:clickable="true"
        android:textSize="@dimen/dd_dp16"
        android:text="@string/agree_to_friend_request"
        app:layout_constraintTop_toBottomOf="@+id/new_friend_detail_desc_tv"
        tools:ignore="KeyboardInaccessibleWidget,SpUsage" />

    <TextView
        android:id="@+id/new_friend_detail_black_list_tv"
        style="@style/comm_corner_btn"
        android:background="@drawable/comm_item_radius4dp_selector"
        android:layout_height="@dimen/dd_dp40"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_marginRight="@dimen/dd_dp15"
        android:layout_marginTop="@dimen/dd_dp15"
        android:gravity="center"
        android:clickable="true"
        android:textSize="@dimen/dd_dp16"
        android:textColor="@color/text_title_black"
        app:layout_constraintTop_toBottomOf="@+id/new_friend_detail_agree_tv"
        tools:ignore="KeyboardInaccessibleWidget,SpUsage" />

</android.support.constraint.ConstraintLayout>
