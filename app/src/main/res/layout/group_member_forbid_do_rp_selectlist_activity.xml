<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.da.library.widget.CommTitle
        android:id="@+id/forbidDoRPSelectListActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.da.library.widget.CommSearchEditText
        android:id="@+id/comm_search_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:stvSearchStyle="DefaultSearch"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/dispatcher_member_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:divider="@null"/>

        <TextView
            android:id="@+id/dispatcher_group_dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/rc_bg_toast"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30.0dip"
            android:visibility="invisible" />

        <com.da.library.widget.SideBar
            android:id="@+id/dispatcher_side_bar"
            android:layout_width="20.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center"
            tools:ignore="RtlHardcoded" />
    </FrameLayout>
</LinearLayout>
