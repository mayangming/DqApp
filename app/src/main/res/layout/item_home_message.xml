<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/item_home_message_head_contain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:padding="@dimen/dp_5">
        <FrameLayout
            android:id="@+id/head_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">
            <ImageView
                android:id="@+id/item_home_message_head_icon"
                android:layout_width="@dimen/dd_dp48"
                android:layout_height="@dimen/dd_dp48"
                android:src="@drawable/user_avatar"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_2"
                android:scaleType="centerCrop"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/item_home_message_head_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:visibility="visible"
            android:layout_alignBottom="@+id/head_container"
            android:layout_alignEnd="@+id/head_container"
            android:src="@mipmap/icon_vip"/>
    </RelativeLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_home_message_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_home_message_head_contain"
        android:layout_toEndOf="@+id/item_home_message_head_contain"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toStartOf="@+id/item_home_message_time">
        <TextView
            android:id="@+id/item_home_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/sp18"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/dp_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/item_home_message_content"
            tools:text="姓名"/>
        <TextView
            android:id="@+id/item_home_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp14"
            android:textColor="@color/app_txt_999999"
            android:layout_marginStart="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@+id/item_home_message_name"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="内容"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/item_home_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/item_home_message_content_tv"
        android:layout_marginStart="@dimen/dd_dp20"
        android:layout_marginEnd="@dimen/dd_dp20"
        android:textColor="@color/app_txt_999999"
        android:textSize="@dimen/sp12"
        tools:text="时间"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignStart="@+id/item_home_message_content_tv"
        android:layout_alignEnd="@+id/item_home_message_time"
        android:layout_alignBottom="@+id/item_home_message_head_contain"
        android:background="@color/color_E4E4E4"/>
</RelativeLayout>