<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F8F8F8">
    <com.da.library.widget.CommTitle
        android:id="@+id/pay_result_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintVertical_bias=".3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="@dimen/dd_dp80"
            android:layout_height="@dimen/dd_dp80"
            android:src="@mipmap/pay_success_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交成功"
            android:textSize="@dimen/sp18"
            android:textColor="@color/color_000000"
            android:layout_marginVertical="@dimen/dp_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待审核，48小时之内退款"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_000000"/>
    </LinearLayout>

    <TextView
        android:id="@+id/pay_success_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textSize="@dimen/sp20"
        android:textColor="@color/color_1DC121"
        android:background="@drawable/btn_solid_ededed"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dd_dp100"
        app:layout_constraintVertical_bias=".8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>