<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.da.library.view.DqToolbar
        android:id="@+id/toolbar"
        app:dqtTitle="@string/new_friends"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.da.library.controls.smarttablayout.SmartTabLayout
        android:id="@+id/new_friend_tablayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:stl_indicatorThickness="1dp"
        app:stl_distributeEvenly ="true"
        app:stl_indicatorColor="@color/text_blue" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/new_friend_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
