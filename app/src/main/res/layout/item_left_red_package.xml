<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_left_red_package_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="start"
        android:visibility="gone"
        tools:text="左侧布局显示的内容"/>
    <RelativeLayout
        android:id="@+id/item_left_red_package_rl"
        android:layout_width="@dimen/dd_dp200"
        android:layout_height="@dimen/dp_72"
        android:layout_marginBottom="@dimen/dp_10">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_left_red_package_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/im_red_package_bubble_left_orange"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_left_red_package_icon"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dd_dp10"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@mipmap/im_red_package_no_open_icon" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_left_red_package_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_alignTop="@+id/item_left_red_package_icon"
            android:layout_toEndOf="@+id/item_left_red_package_icon"
            android:text="恭喜发财，大吉大利"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_left_red_package_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/item_left_red_package_icon"
            android:layout_below="@+id/item_left_red_package_title"
            android:layout_marginTop="2dp"
            android:text="已领取"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_left_red_package_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_alignStart="@+id/item_left_red_package_icon"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginStart="@dimen/dd_dp5"
            android:text="斗圈红包"/>
    </RelativeLayout>

</RelativeLayout>