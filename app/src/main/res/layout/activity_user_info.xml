    <LinearLayout
        android:id="@+id/into_group_way_ll"
        style="@style/comm_sub_item_layout"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            style="@style/comm_sub_title"
            android:layout_width="120dp"
            android:layout_weight="1"
            android:text="@string/into_the_group_of_way" />

        <TextView
