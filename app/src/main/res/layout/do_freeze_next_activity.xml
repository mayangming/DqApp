<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ebebeb">
    <com.da.library.widget.CommTitle
        android:id="@+id/dofreezeNextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/dofreezeNextTxtType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dp10"
        android:layout_marginTop="@dimen/dd_dp15"
        android:text="@string/freeze_next_inputCode"
        android:textColor="@color/black"
        tools:ignore="RtlHardcoded" />
    <RelativeLayout
        android:id="@+id/rl_verify_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp50"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dd_dp10">

        <EditText
            android:id="@+id/dofreezeNextEtCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp49"
            android:hint="@string/freeze_next_inputCode"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColorHint="@color/color_e1e1e1"
            android:textSize="@dimen/dd_dp14"
            android:layout_marginLeft="@dimen/dd_dp15"
            tools:ignore="RtlHardcoded,TextFields" />

        <TextView
            android:id="@+id/dofreezeNextTxtGetCode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dd_dp35"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minEms="5"
            android:paddingLeft="@dimen/dd_dp10"
            android:paddingRight="@dimen/dd_dp10"
            android:text="@string/getCode"
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/dd_dp13"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>
    <TextView
        android:id="@+id/dofreezeNextBtnNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp40"
        android:layout_marginTop="@dimen/dd_dp15"
        android:gravity="center"
        android:text="@string/next_step"
        android:background="@drawable/btn_login_item_bg"
        android:textColor="@color/white"
        android:textSize="@dimen/dd_dp14"
        android:layout_marginLeft="@dimen/dd_dp15"
        android:layout_marginRight="@dimen/dd_dp15"/>
</LinearLayout>