<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/integral_mall_root"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/red_bg2">
        <com.da.library.widget.CommTitle
            android:id="@+id/integral_mall_title"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp20"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_19"
            android:text="斗币"/>

        <TextView
            android:id="@+id/mall_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/sp20"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="@dimen/dp_10"
            tools:text="1234"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dd_dp32"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/integral_currency_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="斗币明细"
                android:textSize="@dimen/sp12"
                android:textColor="@color/white"
                android:background="@drawable/white_semicircle"
                android:paddingHorizontal="@dimen/dp_12"
                android:paddingVertical="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_20"/>
            <TextView
                android:id="@+id/integral_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换记录"
                android:textSize="@dimen/sp12"
                android:textColor="@color/white"
                android:background="@drawable/white_semicircle"
                android:paddingHorizontal="@dimen/dp_12"
                android:paddingVertical="@dimen/dp_3"
                android:layout_marginStart="@dimen/dp_20"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingVertical="@dimen/dp_8"
        android:paddingHorizontal="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10">
        <com.wd.daquan.view.ScrollTextView
            android:id="@+id/scroll_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingVertical="@dimen/dp_20">

        <com.wd.daquan.view.BaseRecycleView
            android:id="@+id/integral_mall_brl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>