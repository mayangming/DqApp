<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.da.library.view.DqToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44"
        app:dqtTitle="@string/wallet_withdraw"/>
    <RelativeLayout
        android:id="@+id/bind_wechat_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dd_dp20"
        android:layout_marginLeft="@dimen/dd_dp10"
        android:layout_marginRight="@dimen/dd_dp10"
        android:layout_marginTop="@dimen/dd_dp20"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/bind_wechat_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wechat_logo"/>
        <TextView
            android:layout_toEndOf="@+id/bind_wechat_logo"
            android:layout_toRightOf="@+id/bind_wechat_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dd_dp10"
            android:layout_marginLeft="@dimen/dd_dp10"
            android:textColor="@color/color_464646"
            android:textSize="@dimen/sp14"
            android:textStyle="bold"
            android:text="提现到微信"/>

        <TextView
            android:id="@+id/bind_wechat_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_464646"
            android:textSize="@dimen/sp14"
            android:text="未绑定"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dd_dp30"
        android:layout_marginRight="@dimen/dd_dp20"
        android:layout_marginLeft="@dimen/dd_dp20"
        android:background="@mipmap/withdraw_edt_bg">
        <TextView
            android:id="@+id/withdraw_left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_txt_999999"
            android:textSize="@dimen/sp_14"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:text="金额"/>
        <View
            android:id="@+id/vertical_divider"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_30"
            android:background="@color/color_e8e8e8"
            android:layout_toEndOf="@+id/withdraw_left1"
            android:layout_toRightOf="@+id/withdraw_left1"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"/>
        <EditText
            android:id="@+id/withdraw_pay_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            tools:hint="123456"
            android:inputType="number|numberDecimal"
            android:layout_toEndOf="@+id/vertical_divider"
            android:layout_toRightOf="@+id/vertical_divider"
            android:layout_toStartOf="@+id/withdraw_balance_all"
            android:layout_toLeftOf="@+id/withdraw_balance_all"
            android:textColor="@color/color_D2B685"
            android:textSize="@dimen/sp18"
            android:textColorHint="@color/color_D2B685"
            android:background="@null"/>
        <TextView
            android:id="@+id/withdraw_balance_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_4CAEF7"
            android:textSize="@dimen/sp_14"
            android:layout_marginEnd="@dimen/dd_dp20"
            android:layout_marginStart="@dimen/dd_dp20"
            android:text="全部提现"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/vip_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dp30"
        android:layout_marginRight="@dimen/dd_dp30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/color_464646"
        android:text="提现手续费为1%,会员免手续费"/>
    <LinearLayout
        android:id="@+id/handlingFeeLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dp30"
        android:layout_marginRight="@dimen/dd_dp30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_464646"
            android:text="手续费(1%): "/>
        <TextView
            android:id="@+id/handlingFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColorHint="@color/color_D2B685"
            android:text="￥0.00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_464646"
            android:layout_marginStart="@dimen/dp_10"
            android:text="实际到账金额: "/>
        <TextView
            android:id="@+id/actualAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColorHint="@color/color_D2B685"
            android:text="￥0.00"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dp30"
        android:layout_marginRight="@dimen/dd_dp30"
        android:layout_marginTop="@dimen/dd_dp20"
        android:layout_marginBottom="@dimen/dd_dp20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_464646"
            android:text="到账时间"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/app_txt_999999"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="2小时内到账"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/withdraw_next"
        android:layout_marginHorizontal="@dimen/dd_dp30"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        style="@style/comm_corner_btn"
        android:gravity="center"
        android:text="下一步"/>

</LinearLayout>