<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_565656"
    tools:context=".login.activity.DownAppActivity">

    <LinearLayout
        android:id="@+id/down_dialog_ll"
        android:layout_width="@dimen/dd_dp300"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_bg_4dp"
        android:orientation="vertical"
        android:padding="@dimen/dd_dp5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dp20"
            android:layout_marginTop="@dimen/dd_dp20"
            android:text="斗圈正在下载..."
            android:textColor="@color/text_blue"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp3"
            android:layout_marginTop="@dimen/dd_dp10"
            android:background="@color/text_blue" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/progressBarHorizontal_indeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dp10"
            android:layout_marginRight="@dimen/dd_dp10"
            android:layout_marginTop="@dimen/dd_dp20"
            android:padding="5dp" />

        <TextView
            android:id="@+id/progress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dp20"
            android:layout_marginTop="@dimen/dd_dp10"
            android:text="当前进度:0%"
            android:textColor="@color/text_title_black"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dp20"
            android:layout_marginRight="@dimen/dd_dp10"
            android:layout_marginTop="@dimen/dd_dp5"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/current_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 K"
                android:textColor="@color/text_title_black"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/total_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / 0.0 M"
                android:textColor="@color/text_title_black"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dp1"
            android:layout_marginTop="@dimen/dd_dp10"
            android:background="@color/color_f2f2f2" />

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/cancel"
            android:background="@drawable/comm_item_selector"
            android:textColor="@color/text_blue" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
