<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16">

    <ImageView
        android:id="@+id/head_icon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:textSize="@dimen/sp14"
        android:textColor="@color/color_333333"
        app:layout_constraintStart_toEndOf="@+id/head_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="你好"/>
    <TextView
        android:id="@+id/user_dq_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:textSize="@dimen/sp12"
        android:textColor="@color/color_666666"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@+id/head_icon"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        android:text="斗圈号:2163527848drt"/>

    <TextView
        android:id="@+id/task_complete_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:textSize="@dimen/sp10"
        android:textColor="@color/color_ff999999"
        android:layout_marginTop="@dimen/dp_5"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="完成时间：2020-0727"/>

    <TextView
        android:id="@+id/task_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:textSize="@dimen/sp10"
        android:textColor="@color/color_1FA23E"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        android:background="@drawable/btn_border_1fa23e"
        android:text="已通过"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

</androidx.constraintlayout.widget.ConstraintLayout>