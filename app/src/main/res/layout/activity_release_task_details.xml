<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F8F8F8">
    <com.da.library.widget.CommTitle
        android:id="@+id/task_send_details_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dd_dp7"
        android:paddingHorizontal="@dimen/dd_dp24"
        android:paddingVertical="@dimen/dp_16">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/task_complete_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_txt_999999"
                android:textSize="@dimen/sp12"
                android:layout_centerVertical="true"
                tools:text="任务ID：683670973623"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">
                <TextView
                    android:id="@+id/task_complete_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/color_EF5B40"
                    android:layout_marginEnd="@dimen/dp_10"
                    tools:text="2020-07-09"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp12"
                    android:text="截止"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_E4E4E4"
            android:layout_marginVertical="@dimen/dp_15"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp12"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:text="任务标题:"/>
                <TextView
                    android:id="@+id/task_complete_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_txt_999999"
                    android:textSize="@dimen/sp12"
                    tools:text="来啊"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/color_000000"
                    android:layout_marginEnd="@dimen/dp_10"
                    tools:text="完成情况:"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/task_complete_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_EF5B40"
                        android:textSize="@dimen/sp12"
                        android:text="9"/>
                    <TextView
                        android:id="@+id/task_complete_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp12"
                        android:text="/15"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/task_details_label_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_E4E4E4"
                android:layout_marginVertical="@dimen/dp_15"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/apply_refund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请退款"
                    android:textColor="@color/app_txt_999999"
                    android:textSize="@dimen/sp12"
                    android:paddingVertical="@dimen/dp_5"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:background="@drawable/corner_f4f4f4"
                    android:layout_marginEnd="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/apply_extension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请延期"
                    android:textColor="@color/color_EF5B40"
                    android:textSize="@dimen/sp12"
                    android:paddingVertical="@dimen/dp_5"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:background="@drawable/corner_fff1e4"
                    android:layout_marginEnd="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/refund_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款详情"
                    android:textColor="@color/color_EF5B40"
                    android:textSize="@dimen/sp12"
                    android:paddingVertical="@dimen/dp_5"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:background="@drawable/corner_fff1e4"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.wd.daquan.view.BaseRecycleView
        android:id="@+id/task_complete_list"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>