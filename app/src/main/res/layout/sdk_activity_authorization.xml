<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/authActivityAppLogo"
        android:layout_width="@dimen/dd_dp85"
        android:layout_height="@dimen/dd_dp85"
        android:layout_marginTop="@dimen/dd_dp50"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo"/>
    <TextView
        android:id="@+id/authActivityAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/authActivityAppLogo"
        android:layout_marginTop="@dimen/dd_dp15"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/sp15"/>
    <TextView
        android:id="@+id/authActivityIns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/authActivityAppName"
        android:layout_marginTop="@dimen/dd_dp68"
        android:layout_marginLeft="@dimen/dd_dp36"
        android:text="@string/auth_ins"
        android:textColor="@color/black"
        android:textSize="@dimen/sp13"/>
    <TextView
        android:id="@+id/authActivityInsInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/authActivityIns"
        android:layout_marginTop="@dimen/dd_dp10"
        android:layout_marginLeft="@dimen/dd_dp36"
        android:text="@string/auth_ins_info"
        android:textColor="@color/color_efeff4"
        android:textSize="@dimen/sp12"/>
    <TextView
        android:id="@+id/authActivityAuth"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp40"
        android:layout_below="@id/authActivityInsInfo"
        android:layout_marginTop="@dimen/dd_dp50"
        android:layout_marginLeft="@dimen/dd_dp60"
        android:layout_marginRight="@dimen/dd_dp60"
        android:gravity="center"
        android:text="@string/login"
        android:background="@drawable/login_btn_selector"
        android:enabled="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />

</RelativeLayout>