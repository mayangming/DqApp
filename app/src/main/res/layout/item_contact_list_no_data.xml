<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="@dimen/dd_dp50"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:src="@mipmap/no_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_friends_click_retry"
        android:textColor="@color/text_title_black"
        android:textSize="@dimen/dd_dp16"
        android:padding="@dimen/dd_dp10"
        tools:ignore="SpUsage" />

</LinearLayout>

