<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/team_invite_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dd_dp8"
        android:scaleType="centerCrop"
        android:src="@drawable/user_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/team_invite_contentllyt"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/team_invite_contentllyt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dd_dp8"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/team_invite_line"
        app:layout_constraintLeft_toRightOf="@+id/team_invite_avatar"
        app:layout_constraintRight_toLeftOf="@+id/team_invite_btnllyt"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/team_invite_teamname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="@color/app_txt_333333"
            android:textSize="@dimen/dd_dp15"/>

        <TextView
            android:id="@+id/team_invite_invitename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/app_txt_999999"
            android:textSize="@dimen/dd_dp13"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/team_invite_btnllyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/team_invite_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/team_invite_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="14dp"
            android:background="@drawable/comm_btn_4dp_corner_selector"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            android:text="同意"
            android:textColor="@color/white"
            android:textSize="@dimen/dd_dp14"/>

        <TextView
            android:id="@+id/team_invite_ignore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="14dp"
            android:background="@drawable/comm_btn_frame_bg_selecter"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            android:text="忽略"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/dd_dp14"/>
    </LinearLayout>

    <TextView
        android:id="@+id/team_invite_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dd_dp14"
        android:paddingBottom="@dimen/dd_dp5"
        android:paddingLeft="@dimen/dd_dp10"
        android:paddingRight="@dimen/dd_dp10"
        android:paddingTop="@dimen/dd_dp5"
        android:text="已添加"
        android:textColor="@color/text_blue_pressed"
        android:textSize="@dimen/dd_dp14"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/team_invite_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/team_invite_line"
        style="@style/OnePxDivider"
        android:layout_marginLeft="@dimen/dd_dp14"
        android:layout_marginRight="@dimen/dd_dp14"
        android:layout_marginTop="@dimen/dd_dp8"
        app:layout_constraintTop_toBottomOf="@+id/team_invite_avatar"/>

</android.support.constraint.ConstraintLayout>
