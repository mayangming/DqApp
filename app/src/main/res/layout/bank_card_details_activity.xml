<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_page_bg">

    <com.da.library.widget.CommTitle
        android:id="@+id/bank_card_details_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/bank_card_details"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/bank_card_details_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dd_dp20"
        android:orientation="vertical">

        <LinearLayout
            android:paddingLeft="@dimen/dd_dp15"
            android:paddingRight="@dimen/dd_dp15"
            android:paddingTop="@dimen/dd_dp8"
            android:paddingBottom="@dimen/dd_dp8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/card_type_"
                android:textSize="@dimen/dd_dp16"
                android:textColor="@color/app_txt_333333"
                android:layout_width="@dimen/dd_dp80"
                android:layout_height="wrap_content"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/bank_card_details_card_name_tv"
                android:textSize="@dimen/dd_dp16"
                android:textColor="@color/app_txt_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/bank_card_details_card_type_tv"
                android:textSize="@dimen/dd_dp14"
                android:textColor="@color/text_blue_pressed"
                android:layout_marginLeft="@dimen/dd_dp10"
                android:layout_marginRight="@dimen/dd_dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="@dimen/dd_dp15"
            android:paddingRight="@dimen/dd_dp15"
            android:paddingTop="@dimen/dd_dp8"
            android:paddingBottom="@dimen/dd_dp8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/card_number_"
                android:textSize="@dimen/dd_dp16"
                android:textColor="@color/app_txt_333333"
                android:layout_width="@dimen/dd_dp80"
                android:layout_height="wrap_content"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/bank_card_details_card_number_tv"
                android:textSize="@dimen/dd_dp16"
                android:textColor="@color/app_txt_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SpUsage" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>