<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_page_bg"
    android:orientation="vertical">

    <com.da.library.widget.CommTitle
        android:id="@+id/base_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/groupSetMangerMasterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dp5"
        android:layout_marginTop="@dimen/dd_dp5"
        android:layout_below="@id/base_title"
        android:text="@string/group_manager_master"
        android:textSize="@dimen/dd_dp16"
        android:textColor="@color/black"/>
    <RelativeLayout
        android:id="@+id/groupSetMangerMasterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupSetMangerMasterTitle"
        android:background="@color/white"
        android:paddingTop="@dimen/dd_dp5"
        android:paddingBottom="@dimen/dd_dp5"
        android:layout_marginTop="@dimen/dd_dp5">

        <ImageView
            android:id="@+id/groupSetMangerMasterAvatar"
            android:layout_width="@dimen/dd_dp34"
            android:layout_height="@dimen/dd_dp34"
            android:layout_marginLeft="@dimen/dd_dp5"
            android:layout_marginTop="@dimen/dd_dp5"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/user_avatar" />

        <TextView
            android:id="@+id/groupSetMangerMasterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/groupSetMangerMasterAvatar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dp5"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="32"
            android:textSize="@dimen/dd_dp16"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/groupSetMangerManagersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupSetMangerMasterLayout"
        android:layout_marginLeft="@dimen/dd_dp5"
        android:layout_marginTop="@dimen/dd_dp5"
        android:text="@string/group_manager_manager"
        android:textColor="@color/black"
        android:textSize="@dimen/dd_dp16" />
    <LinearLayout
        android:id="@+id/groupSetMangerManagersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupSetMangerManagersTitle"
        android:layout_marginTop="@dimen/dd_dp5"
        android:orientation="vertical">
        <ListView
            android:id="@+id/groupSetMangerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dd_dp5"
            android:divider="@null" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/groupSetMangerAddLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@drawable/comm_btn_4dp_corner_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:text="添加管理员"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"/>
    </RelativeLayout>
</RelativeLayout>
