<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F8F8F8">
    <com.da.library.widget.CommTitle
        android:id="@+id/task_send_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dp44" />
    <ScrollView
        android:id="@+id/send_task_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/send_task_bottom"
        android:layout_below="@+id/task_send_title">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/review_continer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="@dimen/dd_dp13"
                android:paddingHorizontal="31dp"
                android:layout_marginVertical="@dimen/dp_8"
                android:visibility="gone"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/task_review_icon"
                        android:layout_marginEnd="@dimen/dp_4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="审核结果"
                        android:textSize="@dimen/sp16"
                        android:textColor="@color/color_333333"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_E4E4E4"
                    android:layout_marginVertical="@dimen/dp_16"/>
                <TextView
                    android:id="@+id/review_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_F23939"
                    android:textSize="@dimen/sp16"
                    tools:text="审核不通过：任务内容违规"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/dp_16"
                android:paddingVertical="@dimen/dp_10">
                <LinearLayout
                    android:id="@+id/send_task_company_type_ll"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务平台:"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginEnd="@dimen/dp_10"/>
                    <TextView
                        android:id="@+id/task_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_EF5B40"
                        tools:text="斗圈"/>
                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:src="@mipmap/arrow_red_right"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/send_task_classification_ll"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务类型:"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginEnd="@dimen/dp_10"/>
                    <TextView
                        android:id="@+id/task_classification_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_EF5B40"
                        tools:text="集赞"/>
                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:src="@mipmap/arrow_red_right"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/dp_16"
                android:paddingVertical="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务标题:"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginEnd="@dimen/dp_18"/>
                <EditText
                    android:id="@+id/send_task_title_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入任务标题,十字以内"
                    android:textColorHint="@color/app_txt_999999"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"
                    android:background="@null"
                    android:maxLength="10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/dp_16"
                android:paddingVertical="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截止时间:"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginEnd="@dimen/dp_18"/>
                <TextView
                    android:id="@+id/send_task_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请输入截止时间"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/dp_16"
                android:paddingVertical="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务单价:"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginEnd="@dimen/dp_18"/>
                <EditText
                    android:id="@+id/send_task_unit_price_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="最低出价0.2元,最高20元"
                    android:textColorHint="@color/app_txt_999999"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"
                    android:background="@null"
                    android:maxLength="4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/dp_16"
                android:paddingVertical="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务数量:"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginEnd="@dimen/dp_18"/>
                <EditText
                    android:id="@+id/send_task_count_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="最低十五单,最高十万单"
                    android:textColorHint="@color/app_txt_999999"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/dp_16"
                android:paddingVertical="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预付赏金:"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginEnd="@dimen/dp_18"/>
                <TextView
                    android:id="@+id/send_task_advance_payment_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="成交额10%为服务费"
                    android:textColorHint="@color/app_txt_999999"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"
                    android:background="@null"
                    android:maxLength="10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_5"
                android:gravity="center">
                <CheckBox
                    android:id="@+id/task_release_guide"
                    android:button="@drawable/check_box_selector_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_txt_999999"
                    android:textSize="@dimen/sp12"/>
                <TextView
                    android:id="@+id/send_task_release_guide"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我已阅读并遵守《发布规则》的全部内容"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="@dimen/dp_16"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务描述:"
                        android:layout_marginEnd="@dimen/dp_10"/>
                    <TextView
                        android:id="@+id/send_task_description_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_txt_999999"
                        android:textSize="@dimen/sp_14"
                        android:text="0/40"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/send_task_description_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入任务描述内容"
                    android:gravity="top"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp12"
                    android:maxLength="40"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/send_task_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/update_task_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="保存"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/app_txt_999999"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/task_status_content_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <LinearLayout
            android:id="@+id/task_status_content_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color_EF5B40"
            android:paddingVertical="@dimen/dp_16"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent=".8">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_18"
                android:src="@mipmap/edit_icon"/>
            <TextView
                android:id="@+id/task_status_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                android:text="申请发布"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>