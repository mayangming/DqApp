<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dd_dp15"
    android:paddingRight="@dimen/dd_dp15"
    android:paddingBottom="@dimen/dd_dp12"
    android:paddingTop="@dimen/dd_dp12"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp15" />

    <Button
        android:id="@+id/tv_audit"
        android:layout_width="@dimen/dd_dp106"
        android:layout_height="@dimen/dd_dp32"
        android:layout_gravity="center_horizontal|right"
        android:layout_marginTop="@dimen/dd_dp12"
        android:layout_marginRight="@dimen/dd_dp10"
        android:background="@drawable/btn_login_item_bg"
        android:text="@string/audit"
        android:textColor="@color/white"
        android:textSize="@dimen/sp15"
        tools:ignore="RtlHardcoded" />
</LinearLayout>