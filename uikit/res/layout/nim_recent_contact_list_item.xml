<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nim_touch_bg"
    android:clickable="true"
    android:orientation="vertical">

    <View
        android:id="@+id/top_line"
        style="@style/horizontal_light_thin_divider"
        android:layout_marginLeft="@dimen/dd_dp65"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:minHeight="@dimen/dd_dp65">

        <FrameLayout
            android:id="@+id/portrait_panel"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <RelativeLayout
                android:id="@+id/vip_head_icon_rl"
                android:layout_width="@dimen/dd_dp60"
                android:layout_height="@dimen/dd_dp60"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="@dimen/dd_dp12"
                android:layout_marginStart="@dimen/dd_dp10"
                android:layout_gravity="center_vertical">
                <com.netease.nim.uikit.common.ui.imageview.HeadImageView
                    android:id="@+id/img_head"
                    android:layout_width="@dimen/avatar_size_default"
                    android:layout_height="@dimen/avatar_size_default"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:id="@+id/vip_head_icon"
                    android:layout_width="@dimen/dd_dp80"
                    android:layout_height="@dimen/dd_dp80"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/head_outtline"/>
            </RelativeLayout>
            <com.netease.nim.uikit.common.ui.drop.DropFake
                android:id="@+id/unread_number_tip"
                android:layout_width="28dip"
                android:layout_height="28dip"
                android:layout_gravity="right|bottom"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone"/>

            <View
                android:id="@+id/unread_number_mute_tip"
                android:layout_width="@dimen/dd_dp10"
                android:layout_height="@dimen/dd_dp10"
                android:layout_gravity="right|bottom"
                android:layout_margin="10dp"
                android:background="@drawable/mute_unread"
                android:gravity="center"
                android:singleLine="true"
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/portrait_panel"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/color_212121"
            android:textSize="@dimen/dd_dp16"/>

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/portrait_panel"
            android:layout_below="@id/tv_nickname"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="40dip"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/portrait_panel"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_online_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/color_aaaaaa_content_text"
                android:textSize="@dimen/dd_dp13"/>

            <ImageView
                android:id="@+id/img_msg_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:contentDescription="@string/empty"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoLink="none"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:scrollHorizontally="true"
                android:text="message"
                android:textColor="@color/text_blue_pressed"
                android:textSize="@dimen/dd_dp13"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="12dip"
            android:textColor="@color/color_b6b6b6"
            android:textSize="@dimen/dd_dp11"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/unread_number_explosion"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_nickname"
            android:layout_marginRight="6dip"
            android:gravity="center"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/mute_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_nickname"
            android:layout_marginRight="6dip"
            android:src="@drawable/qc_message_mute"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        style="@style/horizontal_light_thin_divider"
        android:layout_marginLeft="@dimen/dd_dp65"/>

</LinearLayout>