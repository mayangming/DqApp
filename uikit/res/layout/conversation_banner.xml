<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f2f2f2"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/conversation_banner_close_iv"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:background="@drawable/conversation_banner_selector"
        android:padding="14dp"
        android:src="@drawable/qc_conversation_banner_close"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/conversation_banner_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/text_title_black"
        android:textSize="15dp"
        tools:ignore="SpUsage"/>

    <TextView
        android:id="@+id/conversation_banner_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/conversation_banner_selector"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/team_banner_detail"
        android:textColor="@color/color_3c74ba"
        android:textSize="13dp"
        tools:ignore="SpUsage"/>

</LinearLayout>

