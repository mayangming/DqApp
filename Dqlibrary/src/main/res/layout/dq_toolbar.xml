<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dd_dp44"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/toolbar_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/toolbar_btn_pressed_20dp_selector"
        android:paddingLeft="@dimen/dd_dp15"
        android:paddingRight="@dimen/dd_dp15"
        android:src="@drawable/back_vector_black"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/toolbar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_toRightOf="@+id/toolbar_back_iv"
        android:maxEms="10"
        android:maxLines="1"
        android:textColor="@color/text_title_black"
        android:textSize="@dimen/title_text_size" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/toolbar_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_btn_pressed_20dp_selector"
        android:maxLines="1"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/dd_dp10"
        android:paddingRight="@dimen/dd_dp10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/color_F39825"
        android:textSize="@dimen/title_text_size" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/toolbar_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dd_dp15"
        android:paddingRight="@dimen/dd_dp15"
        android:background="@drawable/toolbar_btn_pressed_20dp_selector"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>