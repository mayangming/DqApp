<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/dd_dp44">

    <ImageView
        android:id="@+id/search_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:src="@drawable/back_vector_black"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_centerVertical="true"
        android:background="@drawable/toolbar_btn_pressed_20dp_selector"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/search_confirm_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="@dimen/dd_dp10"
        android:paddingRight="@dimen/dd_dp10"
        android:text="@string/search"
        android:background="@drawable/toolbar_btn_pressed_20dp_selector"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/dd_dp16"
        tools:ignore="RtlHardcoded"/>

    <RelativeLayout
        android:id="@+id/search_input_rlyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dd_dp5"
        android:layout_marginLeft="@dimen/dd_dp5"
        android:layout_toLeftOf="@+id/search_confirm_tv"
        android:layout_toRightOf="@+id/search_back_iv"
        android:layout_toStartOf="@+id/search_confirm_tv"
        android:layout_toEndOf="@+id/search_back_iv">

        <ImageView
            android:visibility="gone"
            android:id="@+id/search_icon_iv"
            android:layout_marginLeft="@dimen/dd_dp10"
            android:layout_marginRight="@dimen/dd_dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/main_title_search" />

        <EditText
            android:id="@+id/search_input_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/search"
            android:padding="@dimen/dd_dp5"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/text_blue_pressed"
            android:layout_toRightOf="@+id/search_icon_iv"
            android:textSize="@dimen/dd_dp15"
            tools:ignore="RtlHardcoded"/>
        <View
            android:id="@+id/line_view"
            android:background="@color/text_blue"
            android:layout_alignLeft="@+id/search_input_et"
            android:layout_below="@+id/search_input_et"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_marginRight="7dp"
            android:layout_height="1dp"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/search_clear_iv"
            android:layout_width="@dimen/dd_dp25"
            android:layout_height="@dimen/dd_dp25"
            android:padding="@dimen/dd_dp5"
            android:src="@mipmap/clear"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dd_dp8"
            android:visibility="invisible"
            tools:ignore="ContentDescription,RtlHardcoded" />

    </RelativeLayout>

    <View
        android:id="@+id/search_bottom_line"
        style="@style/item_line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>