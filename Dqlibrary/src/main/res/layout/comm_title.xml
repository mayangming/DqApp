<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dd_dp44"
    android:background="@color/white">

    <ImageView
        android:id="@+id/comm_left_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/toolbar_btn_pressed_20dp_selector"
        android:gravity="center"
        android:paddingLeft="@dimen/dd_dp15"
        android:paddingRight="@dimen/dd_dp15"
        android:src="@drawable/back_vector_black"
        android:visibility="visible" />

    <TextView
        android:id="@+id/comm_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/comm_left_iv"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="10"
        android:maxLines="1"
        android:textColor="@color/text_title_black"
        android:textSize="@dimen/dd_dp17" />

    <TextView
        android:id="@+id/comm_title_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dp10"
        android:layout_toRightOf="@+id/comm_title"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingRight="@dimen/dd_dp8"
        android:textColor="@color/text_title_black"
        android:textSize="@dimen/dd_dp17"
        android:visibility="visible" />


    <TextView
        android:id="@+id/comm_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="@drawable/comm_item_selector"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="@dimen/dd_dp15"
        android:paddingRight="@dimen/dd_dp15"
        android:textColor="@color/text_title_black"
        android:textSize="@dimen/title_text_size"
        android:visibility="gone" />

    <TextView
        android:visibility="gone"
        android:id="@+id/comm_left_tips"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/comm_left_iv"
        android:background="@drawable/comm_item_selector"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/text_title_black"
        android:textSize="@dimen/dd_dp15" />

    <TextView
        android:id="@+id/comm_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/toolbar_btn_pressed_20dp_selector"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="@dimen/dd_dp15"
        android:paddingRight="@dimen/dd_dp15"
        android:textColor="@color/text_title_black"
        android:textSize="@dimen/title_text_size" />

    <ImageView
        android:id="@+id/comm_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/toolbar_btn_pressed_20dp_selector"
        android:gravity="center"
        android:paddingLeft="@dimen/dd_dp15"
        android:paddingRight="@dimen/dd_dp15"
        android:src="@mipmap/qc_comm_add"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/comm_right_iv_left_layout"
        android:layout_width="@dimen/dd_dp50"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dd_dp50"
        android:visibility="gone">

        <ImageView
            android:id="@+id/comm_right_iv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/dd_dp5"
            android:paddingRight="@dimen/dd_dp5"
            android:src="@mipmap/main_activtiy_add_contact"
            android:visibility="visible"/>
        <!--android:background="@drawable/cn_btn_selecter"-->

        <com.da.library.widget.DragPointView
            android:id="@+id/comm_right_iv_left_num"
            android:layout_width="@dimen/dd_dp20"
            android:layout_height="@dimen/dd_dp20"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp11"
            android:visibility="invisible"/>
    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        style="@style/OnePxDivider"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

</RelativeLayout>